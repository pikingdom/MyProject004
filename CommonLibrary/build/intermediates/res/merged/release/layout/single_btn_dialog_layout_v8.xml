<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/common_dialog_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000">

    <RelativeLayout
        android:id="@+id/common_dialog_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:background="#ff00ffff"
            android:id="@+id/common_dialog_top_icon"
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="fitXY"
            android:src="@drawable/v8_error_404"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/launcher_popup_recommend_close_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_dialog_top_layout"
        android:background="#ffffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dip"
            android:gravity="center_horizontal"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:text="@string/frame_viewfactory_err_title"
            android:textColor="#212121"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/common_dialog_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/common_dialog_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:maxLines="15"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#ffa8a8a8"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/common_dialog_button"
            android:layout_width="130dp"
            android:layout_height="33dp"
            android:layout_below="@id/common_dialog_desc"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_btn_blue_selector"
            android:gravity="center"
            android:text="反馈问题"
            android:textColor="#ffffffff"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>