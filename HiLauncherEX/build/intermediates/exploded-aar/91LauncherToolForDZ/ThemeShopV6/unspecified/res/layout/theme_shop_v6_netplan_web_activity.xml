<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.nd.hilauncherdev.framework.view.commonview.HeaderView
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <FrameLayout android:id="@+id/web_progress_bar_fl" android:layout_width="fill_parent"
                 android:layout_height="8dip" android:background="@drawable/theme_shop_v6_netplan_webload_process_title_bg" android:layout_below="@id/headerView">
	     <ProgressBar
	        android:id="@+id/web_progress_bar"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:max="100"
	        android:progressDrawable="@drawable/theme_shop_v6_netplan_webload_progress_bg" />
    </FrameLayout>
    <WebView android:id="@+id/theme_list_content"
	    android:layout_below="@+id/web_progress_bar_fl"	 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"/>
</RelativeLayout>