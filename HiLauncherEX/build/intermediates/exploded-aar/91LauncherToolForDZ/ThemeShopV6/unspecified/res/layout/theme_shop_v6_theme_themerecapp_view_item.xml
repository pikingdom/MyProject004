<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- item_bg_selector -->

    <RelativeLayout
        android:id="@+id/themeapp_LinearLayout00"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/themeapp_icon"
            android:layout_width="45dip"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="1dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/themeapp_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/themeapp_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:text="TextView0"
                android:textColor="#545454"
                android:textSize="12sp" >
            </TextView>

            <TextView
                android:id="@+id/themeapp_size"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TextView0"
                android:textColor="#8D8D8D"
                android:textSize="8sp" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/themeapp_state"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/theme_shop_v2_search_btn"
        android:focusable="false"
        android:minWidth="44dp"
        android:singleLine="true"
        android:text="@string/theme_shop_theme_downloading"
        android:textColor="#f8c068"
        android:textSize="14sp" />

</LinearLayout>