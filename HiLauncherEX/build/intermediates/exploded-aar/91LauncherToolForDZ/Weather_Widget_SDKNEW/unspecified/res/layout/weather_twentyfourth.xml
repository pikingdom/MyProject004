<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twentyFourthWeather"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#86ffffff"
        android:visibility="visible" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:gravity="center_vertical"
            android:id="@+id/weather_tittle"
            style="@style/shadow_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="未来6小时天气"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:textColor="#ffffff"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="9dip"
            android:paddingRight="9dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:background="@drawable/weather_shape_more"
            style="@style/shadow_black"
            android:text="查看24小时天气 >>"
            android:textSize="14dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
     <com.nd.weather.widget.UI.weather.twentyfour.MyHorizontalScrollView
        android:id="@+id/llCurve"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1">
        
        <RelativeLayout 
            android:layout_marginTop="0dp"
            android:id="@+id/temp"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content">         
        </RelativeLayout>
        
    </com.nd.weather.widget.UI.weather.twentyfour.MyHorizontalScrollView>
    
</LinearLayout>
