<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:background="@drawable/bg_le_dialog"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="19dp"
        android:paddingRight="16dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/wlan_conn_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.43dp"
            android:gravity="center"
            android:textColor="#202020"
            android:textSize="17.14dp"
            android:text="请输入 SSID 密码"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="26.29dp"
            android:layout_marginTop="26.29dp">

            <Button
                android:id="@+id/wlan_conn_hide_password"
                android:layout_width="19.81dp"
                android:layout_height="15.24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_le_wlan_et_hide_password"/>

            <Button
                android:id="@+id/wlan_conn_clean_password"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/wlan_conn_hide_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:background="@drawable/btn_le_wlan_et_clean_password"/>


            <EditText
                android:id="@+id/wlan_conn_et_passwords"
                android:layout_width="match_parent"
                android:layout_height="26.29dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/wlan_conn_clean_password"
                android:background="@color/transparent"
                android:inputType="textPassword"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.14dp"
            android:background="#2691e3"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c6"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <View
            android:id="@+id/v_0"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c4c4c6"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/wlan_btn_cancel"
            android:layout_toLeftOf="@id/v_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_le_dialog_wlan"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="取消"/>

        <Button
            android:id="@+id/wlan_btn_conn"
            android:layout_toRightOf="@id/v_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_le_dialog_wlan"
            android:textColor="#aed3ed"
            android:textSize="15dp"
            android:text="连接"/>

    </RelativeLayout>

</LinearLayout>