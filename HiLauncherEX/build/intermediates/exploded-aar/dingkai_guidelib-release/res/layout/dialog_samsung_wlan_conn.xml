<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_samsung_dialog_wlan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.7dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/dialog_wlan_tv_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29.7dp"
            android:textColor="#252525"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="ssid"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29.7dp"
            android:textColor="#545454"
            android:textSize="14dp"
            android:text="密码"/>

        <EditText
            android:id="@+id/dialog_wlan_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="6.7dp"
            android:inputType="textPassword"
            android:textColorHint="#b4b4b4"
            android:background="@color/transparent"
            android:hint="输入密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="8dp"
            android:background="#51b0d3"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <CheckBox
                android:id="@+id/dialog_wlan_cb_show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_marginRight="14dp"
                android:button="@drawable/cb_samsung"
                android:textColor="#252525"
                android:text="显示密码"
                android:textSize="14dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23.3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_enable"
                    android:textSize="13dp"
                    android:paddingRight="32dp"
                    android:text="取消"/>

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_conn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_disable"
                    android:layout_marginRight="21dp"
                    android:textSize="13dp"
                    android:text="连接"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>