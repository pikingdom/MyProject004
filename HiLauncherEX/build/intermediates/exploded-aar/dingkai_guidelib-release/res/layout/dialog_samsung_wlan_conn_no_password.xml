<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="167.3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_samsung_dialog_wlan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_wlan_tv_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.7dp"
            android:textColor="#252525"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="ssid"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="安全"/>

        <TextView
            android:id="@+id/dialog_wlan_tv_capabilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="11dp"
            android:textColor="#86898b"
            android:text="WPA/WAP2 PSK"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_enable"
                    android:textSize="13dp"
                    android:text="取消"/>

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_conn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_enable"
                    android:textSize="13dp"
                    android:text="连接"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>