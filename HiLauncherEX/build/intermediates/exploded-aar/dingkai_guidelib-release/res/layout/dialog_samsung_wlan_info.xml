<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_samsung_dialog_wlan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.7dp"
        android:layout_marginLeft="21.7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_wlan_tv_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#252525"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="ssid"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25.7dp"
            android:textSize="15dp"
            android:text="信号强度"/>
        
        <TextView
            android:id="@+id/dialog_wlan_tv_waft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#86898b"
            android:text="极强(72Mbps)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25.7dp"
            android:textSize="15dp"
            android:text="安全"/>

        <TextView
            android:id="@+id/dialog_wlan_tv_capabilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#86898b"
            android:text="极强(72Mbps)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="25.7dp"
            android:textSize="15dp"
            android:text="IP地址"/>

        <TextView
            android:id="@+id/dialog_wlan_tv_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#86898b"
            android:text="192.168.0.1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20.7dp"
            android:layout_marginTop="30dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_enable"
                    android:textSize="13dp"
                    android:text="取消"/>

                <TextView
                    android:id="@+id/dialog_wlan_tv_click_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/guide_samsung_dialog_wlan_conn_enable"
                    android:textSize="13dp"
                    android:text="忘记"/>


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>