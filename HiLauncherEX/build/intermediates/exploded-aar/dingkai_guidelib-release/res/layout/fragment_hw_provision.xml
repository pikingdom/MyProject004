<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_hw_bg">

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="38.6dp"
            android:layout_marginRight="38.6dp"
            android:background="#b8bfc5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_refuse"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_hw_small_step"
                android:text="不同意"
                android:textColor="@color/guide_hw_next_text" />


            <Button
                android:id="@+id/btn_agree"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:background="@drawable/btn_hw_small_step"
                android:text="同意"
                android:textColor="@color/guide_hw_next_text" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_btn"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.6dp"
            android:layout_marginRight="38.6dp"
            android:layout_marginTop="96.6dp"
            android:text="协议与条款"
            android:textColor="#000000"
            android:textSize="29dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="38.6dp"
            android:layout_marginRight="38.6dp"
            android:background="#b8bfc5" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="38.6dp"
                android:layout_marginRight="38.6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13.3dp"
                    android:layout_marginTop="15dp"
                    android:text="最终用于软件许可协议"
                    android:textColor="#4a4a4a"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="在使用华为设备之前，请您阅读以下条款。一旦开始使用华为设备，即表示您已同意并接受华为条款与条件的约束。如您最近购买了华为设备但不同意许可协议条款，在符合华为退货政策的前提下，可将华为设备退还至购买华为设备的华为装卖店或授权分销商。该政策在终端用户许可协议中有详细介绍。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13.3dp"
                    android:text="手机管家"
                    android:textColor="#4a4a4a"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="为向您提供完整的服务”骚扰拦截“和”免打扰“功能将会获取联系人列表、通话记录和信息内容。上述数据使用遵循最终用户软件许可协议。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13.3dp"
                    android:text="情景智能"
                    android:textColor="#4a4a4a"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="根据您的生活事项，管理您的航班、会议和酒店预定信息，并进行相应规划和提醒。将使用您的部分信息（联系人、信息、日程、地理位置、运动、睡眠数据、应用使用情况等），该数据使用遵循最终用户软件许可协议。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.3dp"
                    android:layout_marginTop="27.6dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6.3dp"
                        android:background="@drawable/cb_hw_provision"
                        android:button="@null"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.6dp"
                        android:text="参与用户体验改进计划"
                        android:textColor="#4a4a4a"
                        android:textSize="14dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="尊敬的客户，"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="感谢您选择华为，欢迎访问情感化用户界面(以下简称“EMUI”)。为了提升用户体验，诚挚邀请您参与华为的 EMUI 用户体验改进计划（以下简称“计划”）。请注意，您参与本计划是完全出于自愿。如果您选择参与，请认真阅读本“隐私声明”。参与本计划即表示您接受本“隐私声明”，并同意从您的设备收集以下数据，以供华为进行分析："
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="(1)您的设备识别数据(IMEI、ESN、MEID和SN)、配置数据、应用程序统计数据、用户行为数据和错误日志数据。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="(2)您的数据将经过匿名处理后，再传输给华为。华为将对收集到的所有数据进行分析，以改进华为的产品和服务以及用户体验。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="(3)若要开始或停止参与本计划，只需在“设置”中启用/禁用对您的数据的收集及传输。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="(4)从您的设备中收集到的数据将存储到在安全的云环境中，仅当处理数据以用于本计划时才能访问该环境。数据传输应遵守所有关于隐私和数据保护的适用法律和法规。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="(5)当华为的统计分析完成后，为了本计划目的而从您的设备中收集的所有数据将全部删除。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16.3dp"
                    android:text="对于从您的设备收集的所有信息，华为将严格保密。有关华为如何保护您的数据、身份和隐私的更多信息，请参阅《华为隐私政策》。"
                    android:textColor="#7b7b7b"
                    android:textSize="12dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>