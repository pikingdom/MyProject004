<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64.5dp"
    android:background="@color/guide_hw_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_marginTop="18.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:textSize="14dp"
            android:text="Name"/>
        
        <TextView
            android:id="@+id/item_status"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#595959"
            android:textSize="11dp"
            android:text="hint"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/item_waft"
        android:layout_marginTop="24.3dp"
        android:layout_width="21.3dp"
        android:layout_height="16.6dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_hw_wlan_status_dense_0"/>


</RelativeLayout>