<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/guide_xiaomi_popup_wlan_detail_delete_network_h"
    android:layout_marginLeft="7.3dp"
    android:layout_marginRight="7.3dp"
    android:background="@drawable/bg_xiaomi_wlan_dialog">


    <TextView
        android:id="@+id/tv_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29.7dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="10dp"
        android:text="删除网络"/>

    <TextView
        android:layout_below="@id/tv_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22.7dp"
        android:layout_marginLeft="40.7dp"
        android:layout_marginRight="44.7dp"
        android:textColor="#252525"
        android:textSize="10dp"
        android:text="会停止自动连接此网络，并且再次连接时可能需要重新输入密码"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.7dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/wlan_popup_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_xiaomi_wlan_dialog_left"
            android:textColor="#646464"
            android:textSize="10dp"
            android:text="取消"/>


        <Button
            android:id="@+id/wlan_popup_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_xiaomi_wlan_dialog_right"
            android:textColor="#23a4ff"
            android:textSize="10dp"
            android:text="确定"/>


    </LinearLayout>

</RelativeLayout>