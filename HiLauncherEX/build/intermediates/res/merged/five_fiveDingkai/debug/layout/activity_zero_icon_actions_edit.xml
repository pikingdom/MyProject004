<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/myphone_bg_color_v8"
    android:orientation="vertical">

    <com.nd.hilauncherdev.shop.shop3.customview.ThemeHeaderExView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/actions_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:listSelector="@color/transparent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dip"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dip"
            android:layout_weight="1.0">

            <EditText
                android:id="@+id/et_action"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:background="@drawable/match_keyword_input_stroke_bg"
                android:hint="@string/zero_icon_edit_hint"
                android:paddingLeft="40dip"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dip"
                android:scaleType="fitCenter"
                android:src="@drawable/match_keyword_input_icon" />
        </FrameLayout>

        <TextView
            android:id="@+id/btn_add_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myphone_click_item_blue"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/common_button_addto"
            android:textColor="#00bcd5" />
    </LinearLayout>

</LinearLayout>