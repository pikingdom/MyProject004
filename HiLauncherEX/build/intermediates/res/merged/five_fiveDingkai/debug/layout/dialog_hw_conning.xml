<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_hw_dialog_wlan">

    <TextView
        android:id="@+id/tv_conn_for_ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="19.3dp"
        android:textColor="#252525"
        android:textSize="14dp"
        android:text="正在连接"/>

    <ImageView
        android:id="@+id/iv_wifi_conn"
        android:layout_width="40.3dp"
        android:layout_height="40.3dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/iv_hw_wifi_conn_rotate"/>
</RelativeLayout>