<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="@dimen/status_bar_height" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="70dp" >

        <TextView
            android:id="@+id/folder_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/folder_encript_type_choose_title"
            android:textColor="@color/standard_dialog_title"
            android:textSize="@dimen/folder_full_title_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            android:background="#d3d3d3" />

        <TextView
            android:id="@+id/btn_cancel_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/folder_full_btn_confirm_selector"
            android:gravity="center"
            android:text="@string/folder_encript_type_choose_none"
            android:textColor="@color/standard_dialog_btn_confirm_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_reset_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/folder_full_btn_confirm_selector"
            android:gravity="center"
            android:text="@string/folder_encript_type_choose_pwd"
            android:textColor="@color/standard_dialog_btn_confirm_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/folder_full_btn_cancel_selector"
            android:gravity="center"
            android:text="@string/common_button_cancel"
            android:textColor="@color/standard_dialog_btn_cancel_text"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>