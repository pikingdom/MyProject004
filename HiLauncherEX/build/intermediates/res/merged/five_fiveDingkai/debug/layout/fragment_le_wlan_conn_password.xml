<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/guide_le_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/wlan_conn_cancel_conn"
            android:layout_width="14.1dp"
            android:layout_height="14.1dp"
            android:layout_marginTop="6.57dp"
            android:layout_marginLeft="20.95dp"
            android:layout_marginRight="25.14dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_le_wlan_cancel_conn"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.29dp"
            android:layout_toRightOf="@id/wlan_conn_cancel_conn"
            android:textColor="#1c1c1c"
            android:textSize="19.42dp"
            android:text="连接网络"/>

        <ImageButton
            android:id="@+id/wlan_conn_confirm_conn"
            android:layout_width="18.29dp"
            android:layout_height="14.48dp"
            android:layout_marginRight="18.67dp"
            android:layout_marginTop="6.95dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_le_wlan_confirm_conn"
            android:contentDescription="@null"/>

        
    </RelativeLayout>

    <TextView
        android:id="@+id/wlan_conn_title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="93dp"
        android:textColor="#1b2c34"
        android:textSize="18.29dp"
        android:text="请输入密码"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="16dp">

        <Button
            android:id="@+id/wlan_conn_hide_password"
            android:layout_marginTop="18.29dp"
            android:layout_width="19.81dp"
            android:layout_height="15.24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_le_wlan_et_hide_password"/>

        <Button
            android:id="@+id/wlan_conn_clean_password"
            android:layout_marginTop="18.29dp"
            android:layout_marginRight="11.81dp"
            android:layout_toLeftOf="@id/wlan_conn_hide_password"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:background="@drawable/btn_le_wlan_et_clean_password"/>


        <EditText
            android:id="@+id/wlan_conn_et_passwords"
            android:layout_width="match_parent"
            android:layout_height="19.3dp"
            android:layout_marginTop="14.3dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/wlan_conn_clean_password"
            android:background="@color/transparent"
            android:inputType="textPassword"/>


        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2691e3"
            android:layout_below="@id/wlan_conn_et_passwords"/>

    </RelativeLayout>

</LinearLayout>