<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="158.3dp"
            android:background="@drawable/bg_samsung_clause_top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_samsung_title"
            android:gravity="center_vertical"
            android:paddingLeft="35.7dp"
            android:text="条款和条件"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="" />


    </LinearLayout>

    <include
        android:id="@+id/i_0"
        layout="@layout/include_samsung_guide_bottom_next"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/i_0"
        android:layout_below="@id/ll_0"
        android:background="#fafafa"
        android:orientation="vertical"
        android:paddingBottom="41.7dp"
        android:paddingLeft="35.7dp"
        android:paddingRight="31.7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.3dp"
            android:text="最终用户许可协议"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="仔细阅读最终用户许可协议。它包含重要的信息。"
            android:textColor="#86898b"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="诊断数据"
            android:textColor="#252525"
            android:textSize="12dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp">

            <CheckBox
                android:id="@+id/clause_cb"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="1.7dp"
                android:button="@drawable/cb_samsung"
                android:checked="true"
                android:paddingBottom="14.7dp"
                android:paddingLeft="14.7dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/clause_cb">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/guide_samsung_clause_diagnostic_data"
                    android:textColor="#86898b"
                    android:textSize="12dp" />

            </ScrollView>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>