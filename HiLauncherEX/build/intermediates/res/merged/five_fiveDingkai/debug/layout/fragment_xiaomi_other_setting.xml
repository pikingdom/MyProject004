<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_xiaomi_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="148dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他设置"
            android:textColor="#444444"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="28.7dp"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73.3dp">

            <Switch
                android:id="@+id/other_setting_position_service_switch"
                android:layout_width="wrap_content"
                android:layout_height="19.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18.4dp"
                android:checked="true"
                android:switchMinWidth="33.3dp"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/switch_xiaomi_thumb"
                android:thumbTextPadding="7dp"
                android:track="@drawable/switch_xiaomi_track" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/other_setting_position_service_switch"
                android:layout_marginRight="14.3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:text="位置服务"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10dp"
                    android:layout_marginTop="4.7dp"
                    android:lineSpacingExtra="4.7dp"
                    android:text="@string/guide_xiaomi_other_setting_position_service"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#eeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="83.3dp">

            <Switch
                android:id="@+id/other_setting_user_experience_switch"
                android:layout_width="wrap_content"
                android:layout_height="19.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18.4dp"
                android:checked="true"
                android:switchMinWidth="33.3dp"
                android:textOff=""
                android:textOn=""
                android:thumb="@drawable/switch_xiaomi_thumb"
                android:thumbTextPadding="7dp"
                android:track="@drawable/switch_xiaomi_track" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/other_setting_user_experience_switch"
                android:layout_marginRight="14.3dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:text="用户体验计划"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="10dp"
                    android:layout_marginTop="4.7dp"
                    android:lineSpacingExtra="4.7dp"
                    android:text="@string/guide_xiaomi_other_setting_user_experience"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#eeeeee" />

    </LinearLayout>

    <include
        android:id="@+id/include_bottom"
        layout="@layout/include_xiaomi_guide_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/guide_xiaomi_include_page_bottom_h"
        android:layout_alignParentBottom="true" />

</RelativeLayout>