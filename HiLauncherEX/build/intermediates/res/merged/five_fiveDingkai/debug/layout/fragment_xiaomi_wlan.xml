<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_xiaomi_bg">


    <include
        android:id="@+id/include_bottom"
        android:layout_alignParentBottom="true"
        layout="@layout/include_xiaomi_guide_bottom"
        android:layout_height="@dimen/guide_xiaomi_include_page_bottom_h"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/include_bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="22dp"
            android:layout_marginTop="70.7dp"
            android:layout_marginLeft="47.7dp"
            android:text="连接互联网"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28.7dp"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp">

            <View
                android:id="@+id/v_0"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#eaeaea"/>
            <View
                android:id="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="#eaeaea"/>

            <ListView
                android:id="@+id/wlan_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#eaeaea"
                android:dividerHeight="0.7dp"
                android:listSelector="@drawable/item_xiaomi_wlan"
                android:layout_below="@id/v_0"
                android:layout_above="@id/v_1"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>