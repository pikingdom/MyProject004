<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/guide_le_include_page_top_h"
    android:background="@color/guide_le_bg">

    <ImageButton
        android:layout_width="19.81dp"
        android:layout_height="20.23dp"
        android:layout_marginTop="26.7dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_le_page_back"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26.7dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="28dp"
        android:paddingBottom="7dp"
        />

    <RelativeLayout
        android:id="@+id/btn_more"
        android:layout_width="23dp"
        android:layout_height="14.3dp"
        android:layout_marginRight="17.3dp"
        android:layout_marginTop="31.3dp"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageButton
            android:layout_width="3.7dp"
            android:layout_height="14.3dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_le_top_more"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawSelectorOnTop="true"
        android:textColor="@color/guide_le_title_text"
        android:textSize="@dimen/guide_le_page_title"
        android:text="标题"/>

</RelativeLayout>