<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/intercept_shortcut_install"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="4dp"
               android:src="@drawable/logo"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/intercept_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="@string/intercept_notification_num"
                />
        <LinearLayout
                android:id="@+id/intercept_detail"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <ImageView
                    android:id="@+id/intercept_icon_one"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                     />
            <ImageView
                    android:id="@+id/intercept_icon_two"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    />
            <ImageView
                    android:id="@+id/intercept_icon_three"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    />
            <ImageView
                    android:id="@+id/intercept_icon_four"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:text="@string/intercept_notification_tip"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>