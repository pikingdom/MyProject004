<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa">

    <ImageView
        android:id="@+id/item_wlan_status"
        android:layout_width="22.3dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20.3dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_samsung_wlan_status_dense"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_wlan_status"
        android:layout_centerVertical="true"
        android:layout_marginTop="15.3dp"
        android:layout_marginBottom="12.3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wlan_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#252525"
            android:textSize="16dp"
            android:text="ssid"/>
        
        <TextView
            android:id="@+id/item_wlan_conn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:textSize="11dp"
            android:text="正在连接..."
            />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignParentRight="true"
        android:background="#d9d9d9"/>

</RelativeLayout>