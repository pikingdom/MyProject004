<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4f4f4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp"
            android:orientation="vertical" 
            android:background="@drawable/bg_card">

            <!-- 第1行 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="17dp" >

                <LinearLayout
                    android:id="@+id/wifiButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_wifi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_wifi"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/mobidataButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_mobiledata" />

                    <TextView
                        android:id="@+id/mobileTextView"
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_mobiledata"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/wirelessButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/wirelessImageView"
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_wireless" />

                    <TextView
                        android:id="@+id/wirelessTextView"
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_wireless"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/bluetoothButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_bluetooth" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_bluetooth"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <!-- 第2行 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="17dp" >

                <LinearLayout
                    android:id="@+id/securityButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_security" />

                    <TextView
                        android:id="@+id/screenLockTextView"
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_screen_safe"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/brightnessButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_brigtness" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_display"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/ringtoneButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_ringtone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_sound"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/alarmButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_language_input" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_alarm"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <!-- 第3行 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="17dp" >

                <LinearLayout
                    android:id="@+id/appsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_apps" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_apps"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/storageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_storage" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_storage"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/batteryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
					<FrameLayout 
					    android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
	                    android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
	                    android:layout_gravity="center">
	                    <ImageView
	                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
	                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
	                        android:layout_gravity="center_horizontal"
	                        android:src="@drawable/launcher_menu_sys_settings_battery" />
	                    <TextView
	                        android:id="@+id/system_settings_battery_value"
	                        android:layout_width="match_parent"
                        	android:layout_height="match_parent"
	                        android:textColor="@color/white"
	                        android:gravity="center"
	                        android:text="100%"
	                        android:textSize="@dimen/launcher_menu_sys_settings_font_size"/>
					</FrameLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_battery"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>

                <View style="@style/SystemSettingVSep" />

                <LinearLayout
                    android:id="@+id/usbDebugButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_height="@dimen/launcher_menu_sys_settings_icon_size"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/launcher_menu_sys_settings_usb_debug" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dip"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="2"
                        android:paddingTop="2dip"
                        android:text="@string/sys_settings_usb_debug"
                        android:textColor="#717171"
                        android:textSize="@dimen/launcher_menu_sys_settings_font_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_more_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/common_btn_blue"
            android:gravity="center"
            android:text="@string/sys_settings_more_settings"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>

        <LinearLayout
            android:id="@+id/launcher_menu_system_settings_about_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:paddingBottom="25dp"
            android:paddingTop="25dp" 
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 手机型号 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/machineName_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/common_blue_vertical_line"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:text="@string/sys_settings_machine_name"
                        android:textColor="#555555"
                        android:textSize="@dimen/system_setting_info_text" />

                    <TextView
                        android:id="@+id/machineName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:textColor="#717171"
                        android:textSize="@dimen/system_setting_info_text" />
                </LinearLayout>

                <!-- root权限 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:id="@+id/isRoot_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/common_blue_vertical_line"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:text="@string/sys_settings_root_option"
                        android:textColor="#555555"
                        android:textSize="@dimen/system_setting_info_text" />

                    <TextView
                        android:id="@+id/isRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:textColor="#717171"
                        android:textSize="@dimen/system_setting_info_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 固件版本 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:id="@+id/firmWare_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/common_blue_vertical_line"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:text="@string/sys_settings_firmware"
                        android:textColor="#555555"
                        android:textSize="@dimen/system_setting_info_text" />

                    <TextView
                        android:id="@+id/firmWare"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:textColor="#717171"
                        android:textSize="@dimen/system_setting_info_text" />
                </LinearLayout>

                <!-- 分辨率 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:id="@+id/screenResolution_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/common_blue_vertical_line"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:text="@string/sys_settings_screen_resolution"
                        android:textColor="#555555"
                        android:textSize="@dimen/system_setting_info_text" />

                    <TextView
                        android:id="@+id/screenResolution"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|left"
                        android:textColor="#717171"
                        android:textSize="@dimen/system_setting_info_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>