<?xml version="1.0" encoding="utf-8"?>
<!-- 桌面下滑菜单精品资源布局 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
	android:paddingRight="12dp"
    android:orientation="vertical">
    <!-- 壁纸布局 -->
	<RelativeLayout 
	    android:id="@+id/top_menu_boutique_wallpaper_layout"
	    android:layout_width="match_parent"
    	android:layout_height="240dp"
    	android:visibility="invisible">
    	<LinearLayout 
    	    android:layout_width="match_parent"
	   		android:layout_height="match_parent"
    	    android:background="@drawable/theme_shop_v6_theme_no_find_small">
	    	<ImageView 
	   	    	android:id="@+id/top_menu_boutique_wallpaper_image"
	            android:layout_width="match_parent"
	   			android:layout_height="match_parent"
	            android:scaleType="fitXY"/>
    	</LinearLayout>
	    <LinearLayout 
	        android:id="@+id/top_menu_boutique_wallpaper_btn"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="@drawable/top_menu_boutique_res_wallpaper_btn"
    		android:layout_alignParentBottom="true"
    		android:layout_alignParentRight="true"
    		android:layout_marginRight="12dp"
    		android:layout_marginBottom="12dp"
    		android:gravity="center">
	        <TextView 
	            android:id="@+id/top_menu_boutique_wallpaper_btn_text"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/top_menu_boutique_resource_recommend_wallpaper"
	            android:textColor="#ffffffff"
	            android:textSize="13sp"/>
	    </LinearLayout>
	</RelativeLayout>
	<!-- 主题布局 -->
	<LinearLayout 
	    android:id="@+id/top_menu_boutique_theme_layout"
	    android:layout_width="match_parent"
    	android:layout_height="240dp"
    	android:orientation="vertical"
    	android:visibility="invisible">
	    <LinearLayout 
	        android:layout_width="match_parent"
    		android:layout_height="171dp"
    		android:orientation="horizontal">
	        <LinearLayout 
	    	    android:layout_width="wrap_content"
		   		android:layout_height="match_parent"
		   		android:layout_weight="1"
	    	    android:background="@drawable/theme_shop_v6_theme_no_find_small">
		        <ImageView 
		            android:id="@+id/top_menu_boutique_theme_image1"
		            android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:scaleType="fitXY"/>
	        </LinearLayout>
	        <LinearLayout 
	    	    android:layout_width="wrap_content"
		   		android:layout_height="match_parent"
		   		android:layout_weight="1"
	    	    android:background="@drawable/theme_shop_v6_theme_no_find_small">
		         <ImageView 
		            android:id="@+id/top_menu_boutique_theme_image2"
		            android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:scaleType="fitXY"/>
	         </LinearLayout>
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:background="@drawable/bg_card">
	         <TextView 
	            android:id="@+id/top_menu_boutique_theme_title"
	            android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginTop="14dp"
    			android:layout_marginLeft="12dp"
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_alignParentTop="true"
	            android:text="@string/top_menu_boutique_resource_recommend_theme"
	            android:textColor="#ff1c1c1c"
	            android:textSize="13sp"/>
	        <TextView 
	            android:id="@+id/top_menu_boutique_theme_author"
	            android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginLeft="12dp"
    			android:layout_marginBottom="15dp"
    			android:layout_alignParentBottom="true"
    			android:singleLine="true"
    			android:ellipsize="end"
	            android:text="@string/top_menu_boutique_resource_recommend_theme"
	            android:textColor="#ff999999"
	            android:textSize="12sp"/>
	        <LinearLayout 
	            android:id="@+id/top_menu_boutique_theme_btn"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:background="@drawable/top_menu_boutique_res_theme_btn"
	    		android:layout_alignParentBottom="true"
	    		android:layout_alignParentRight="true"
	    		android:layout_marginRight="12dp"
	    		android:layout_marginBottom="12dp"
	    		android:gravity="center">
		        <TextView 
		            android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
		            android:text="@string/top_menu_boutique_resource_recommend_theme"
		            android:textColor="#ffffffff"
		            android:textSize="13sp"/>
	    	</LinearLayout>
	    </RelativeLayout> 
	</LinearLayout>
	<!-- 应用和新闻布局 -->
	<LinearLayout 
	    android:id="@+id/top_menu_boutique_newsandapp_layout"
	    android:layout_width="match_parent"
    	android:layout_height="240dp"
    	android:orientation="vertical"
    	android:visibility="invisible">
	    <LinearLayout 
	        android:layout_width="match_parent"
    		android:layout_height="171dp"
    		android:orientation="horizontal"
    		android:background="@drawable/theme_shop_v6_theme_no_find_small">
	        <ImageView 
	            android:id="@+id/top_menu_boutique_newsandapp_image"
	            android:layout_width="match_parent"
    			android:layout_height="match_parent"
	            android:scaleType="centerCrop"/>
	    </LinearLayout>
	    <RelativeLayout 
	        android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:background="@drawable/bg_card">
	         <TextView 
	            android:id="@+id/top_menu_boutique_newsandapp_title"
	            android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_toLeftOf="@+id/top_menu_boutique_newsandapp_btn"
    			android:layout_marginTop="14dp"
    			android:layout_marginLeft="12dp"
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_alignParentTop="true"
	            android:text="@string/top_menu_boutique_resource_recommend_news"
	            android:textColor="#ff1c1c1c"
	            android:textSize="13sp"/>
	        <TextView 
	            android:id="@+id/top_menu_boutique_newsandapp_summary"
	            android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginLeft="12dp"
    			android:layout_marginRight="12dp"
    			android:layout_marginBottom="15dp"
    			android:layout_alignParentBottom="true"
    			android:singleLine="true"
    			android:ellipsize="end"
	            android:text="@string/top_menu_boutique_resource_recommend_news"
	            android:layout_toLeftOf="@+id/top_menu_boutique_newsandapp_btn"
	            android:textColor="#ff999999"
	            android:textSize="12sp"/>
	        <LinearLayout 
	            android:id="@+id/top_menu_boutique_newsandapp_btn"
		        android:layout_width="83dp"
	    		android:layout_height="30dp"
	    		android:background="@drawable/top_menu_boutique_res_theme_btn"
	    		android:layout_alignParentBottom="true"
	    		android:layout_alignParentRight="true"
	    		android:layout_marginRight="12dp"
	    		android:layout_marginBottom="12dp"
	    		android:gravity="center">
		        <TextView 
		            android:id="@+id/top_menu_boutique_newsandapp_btn_text"
		            android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	    			android:gravity="center"
		            android:text="@string/top_menu_boutique_resource_recommend_news"
		            android:textColor="#ffffffff"
		            android:textSize="13sp"/>
	    	</LinearLayout>
	    </RelativeLayout> 
	</LinearLayout>
</FrameLayout>
