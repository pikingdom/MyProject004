<?xml version="1.0" encoding="utf-8"?>
<!-- 桌面菜单通知视图 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/launcher_notification_item"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/launcher_notification_height"
    	android:visibility="gone">
	    <!-- 图标 -->
	    <com.nd.hilauncherdev.launcher.menu.notification.LauncherNotificationTextView
	        android:id="@+id/launcher_notification_item_img"
	        android:layout_width="@dimen/launcher_notification_image_height"
	        android:layout_height="@dimen/launcher_notification_image_height"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="8.5dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/app_market_default_icon"
	        android:layout_alignParentLeft="true"/>
		<LinearLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_centerVertical="true"
		    android:orientation="vertical"
		    android:layout_toRightOf="@+id/launcher_notification_item_img"
		    android:layout_toLeftOf="@+id/launcher_notification_item_download">
		    <TextView 
		        android:id="@+id/launcher_notification_item_title"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="@color/white"
		        android:textSize="14sp"
		        android:text="title"/>
		    <TextView 
		        android:id="@+id/launcher_notification_item_summary"
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginTop="5dp"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#4cffffff"
		        android:textSize="11sp"
		        android:text="summary"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/launcher_notification_item_download"
		    android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_alignParentRight="true"
	    	android:layout_marginRight="16dp"
	    	android:gravity="center"
	    	android:visibility="gone">
			<ImageView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/launcher_notification_item_download_normal"/>
		</LinearLayout>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/launcher_notification_open_item"
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/launcher_notification_fistsetting_height"
    	android:orientation="vertical"
    	android:visibility="gone">
	    <TextView 
	        android:id="@+id/launcher_notification_open_item_title"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="16dp"
    		android:layout_marginRight="16dp"
    		android:layout_marginTop="16dp"
    		android:layout_alignParentTop="true"
	        android:textColor="@color/white"
	        android:textSize="14sp"
	        android:text="@string/recommend_notification_kqtz"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:orientation="horizontal"
    		android:layout_alignParentBottom="true"
    		android:gravity="right">
	        <TextView 
		        android:id="@+id/launcher_notification_open"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:gravity="center"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#4cffffff"
		        android:textSize="14sp"
		        android:text="@string/recommend_notification_kqtz_close"
		        android:background="@color/launcher_notification_item_btn_normal"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:src="@drawable/launcher_notification_split_lines"
	            android:background="@color/launcher_notification_item_btn_normal"/>
	        <TextView 
		        android:id="@+id/launcher_notification_close"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:gravity="center"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#ff00bed2"
		        android:textSize="14sp"
		        android:text="@string/recommend_notification_kqtz_open"
		        android:background="@color/launcher_notification_item_btn_normal"/>
	    </LinearLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/launcher_notification_dialog"
		android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:visibility="gone"
	   	android:orientation="vertical">
	    <TextView 
	        android:id = "@+id/launcher_notification_dialog_title"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="25dp"
    		android:layout_marginLeft="16dp"
    		android:layout_marginRight="16dp"
    		android:layout_marginBottom="25dp"
	        android:textColor="@color/white"
	        android:textSize="14sp"
	        android:text="@string/recommend_notification_dialog_content"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:orientation="horizontal"
    		android:gravity="right">
	        <TextView 
		        android:id="@+id/launcher_notification_dialog_open"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:gravity="center"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#4cffffff"
		        android:textSize="14sp"
		        android:text="@string/recommend_notification_dialog_close"
		        android:background="@color/launcher_notification_item_btn_normal"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:src="@drawable/launcher_notification_split_lines"
	            android:background="@color/launcher_notification_item_btn_normal"/>
	        <TextView 
		        android:id="@+id/launcher_notification_dialog_close"
		        android:layout_width="wrap_content"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	    		android:gravity="center"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="#ff00bed2"
		        android:textSize="14sp"
		        android:text="@string/recommend_notification_dialog_open"
		        android:background="@color/launcher_notification_item_btn_normal"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
