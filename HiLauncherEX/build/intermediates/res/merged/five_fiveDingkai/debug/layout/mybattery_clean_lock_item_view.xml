<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingTop="@dimen/myphone_item_padding" android:paddingBottom="@dimen/myphone_item_padding"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/myphone_click_item_blue">
	<ImageView android:id="@+id/image" android:scaleType="center"
		android:layout_centerVertical="true" android:layout_width="@dimen/myphone_item_icon"
		android:layout_height="@dimen/myphone_item_icon" android:layout_alignParentLeft="true"
		android:layout_marginLeft="@dimen/myphone_margin_left" />
	<TextView android:id="@+id/text" android:textColor="@color/myphone_common_text_color"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/image" android:layout_toLeftOf="@+id/checkbox"
		android:textSize="@dimen/myphone_item_text_size" android:singleLine="true"
		android:ellipsize="end" android:layout_marginLeft="@dimen/myphone_margin_left"
		android:layout_centerVertical="true" android:gravity="center_vertical" />
	<CheckBox android:id="@+id/checkbox"
		android:background="@drawable/common_checkbox_selector"
		android:layout_width="25dip" android:layout_height="25dip"
		android:focusable="false" android:clickable="false" android:button="@null"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_marginRight="10dip" />
</RelativeLayout>