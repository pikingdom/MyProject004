<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<com.nd.hilauncherdev.framework.view.commonview.FooterView
        android:id="@+id/battery_powerusage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >
    </com.nd.hilauncherdev.framework.view.commonview.FooterView>

    <ListView
        android:id="@+id/battery_powerusage_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/battery_powerusage"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/myphone_common_split" />

</RelativeLayout>