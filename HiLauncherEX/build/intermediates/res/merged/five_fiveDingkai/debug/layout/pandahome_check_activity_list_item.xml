<?xml version="1.0" encoding="utf-8"?>
<!-- pandahome检测activity list的元素-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp" 
    android:paddingBottom="10dp">
    <ImageView 
        android:id="@+id/pandahome_check_activity_list_item_image" 
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:gravity="center_vertical"
    	android:src="@drawable/pre_more_button"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/pandahome_check_activity_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/pandahome_check_activity_list_item_image" 
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="#696969"
        android:textSize="18sp"/>

</RelativeLayout>