<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/view_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/update_layout "
        android:layout_margin="9dip"
        android:background="@drawable/wrapper_view_corners_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/update_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="20sp" 
            android:layout_marginBottom="50dip"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ok"
                android:layout_marginLeft="7dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_btn_blue_selector"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="20sp" />
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textColor="#ffffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancel"
                android:layout_marginRight="7dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_btn_red_selector"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>