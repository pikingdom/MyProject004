<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="221.6dp"
    android:background="@color/guide_le_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45.6dp"
        android:gravity="center"
        android:textColor="@color/guide_le_title_text"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="在休眠状态下保持WLAN网络连接"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#c5c9c7"/>
    
    <TextView
        android:id="@+id/wlan_conn_keep_item_throughout"
        android:layout_width="match_parent"
        android:layout_height="43.3dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="13dp"
        android:background="@drawable/btn_le_item_btn"
        android:textColor="@color/guide_le_wlan_conn_keep_text_selected"
        android:text="始终"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#c5c9c7"/>

    <TextView
        android:id="@+id/wlan_conn_keep_item_charge"
        android:layout_width="match_parent"
        android:layout_height="43.3dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="13dp"
        android:background="@drawable/btn_le_item_btn"
        android:textColor="@color/guide_le_wlan_conn_keep_text_normal"
        android:text="仅限充电时"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#c5c9c7"/>

    <TextView
        android:id="@+id/wlan_conn_keep_item_never"
        android:layout_width="match_parent"
        android:layout_height="43.3dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="13dp"
        android:background="@drawable/btn_le_item_btn"
        android:textColor="@color/guide_le_wlan_conn_keep_text_normal"
        android:text="永不"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#c5c9c7"/>

    <TextView
        android:id="@+id/wlan_conn_keep_cancel"
        android:layout_width="match_parent"
        android:layout_height="44.7dp"
        android:gravity="center"
        android:textSize="13dp"
        android:background="@drawable/btn_le_item_btn"
        android:textColor="@color/guide_le_language_wheel_select_normal"
        android:text="取消"/>
</LinearLayout>