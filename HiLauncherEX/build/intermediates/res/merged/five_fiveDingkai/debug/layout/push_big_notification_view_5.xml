<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    android:background="@drawable/push_notification_view_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="60dip"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/item_icon"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#343434"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/update_time_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#0bb54f"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:textColor="#757575"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="5" />

        <LinearLayout
            android:id="@+id/two_button"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/button_1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:background="@drawable/push_notification_btn_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/button_1_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#5c5c5c"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_2"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/push_notification_btn_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/button_2_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#5c5c5c"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>