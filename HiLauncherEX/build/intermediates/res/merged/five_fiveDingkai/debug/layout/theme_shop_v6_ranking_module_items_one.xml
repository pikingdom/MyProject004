<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/theme_shop_v6_list_pre_image_bg_2"
    android:weightSum="2"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			<FrameLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
	            <ImageView
	                android:id="@+id/imgTheme"
	                android:layout_width="match_parent"
	                android:layout_height="@dimen/theme_shop_ranking_img_height"
	                android:scaleType="fitXY"
	                android:src="@drawable/theme_shop_v6_theme_no_find_small" >
	            </ImageView>
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:layout_width="67dp"
                android:layout_height="77dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/theme_shop_v6_ranking_yellow_bj" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/theme_shop_v6_ranking_first" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/theme_shop_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#535353"
            android:textSize="@dimen/theme_shop_v6_recomment_text_size" >
        </TextView>

        <TextView
            android:id="@+id/theme_shop_item_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="3dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:textColor="#7B7B7B"
            android:textSize="@dimen/theme_shop_v6_recomment_text_size_12" >
        </TextView>

        <RelativeLayout
            android:id="@+id/theme_shop_item_price"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_btn_blue_selector"
            android:gravity="center" >

            <TextView
                android:id="@+id/theme_shop_item_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/theme_shop_v6_func_theme_tab_ranking_free"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/theme_shop_item_price_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/theme_shop_item_price_old"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/theme_shop_v6_func_theme_tab_ranking_free"
                android:textColor="@color/white"
                android:textSize="14sp" >
            </TextView>

            <ImageView
                android:id="@+id/theme_shop_item_price_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/theme_shop_item_price_old"
                android:layout_alignLeft="@+id/theme_shop_item_price_old"
                android:layout_alignRight="@+id/theme_shop_item_price_old"
                android:layout_alignTop="@+id/theme_shop_item_price_old"
                android:src="@drawable/theme_shop_item_detail_img"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>