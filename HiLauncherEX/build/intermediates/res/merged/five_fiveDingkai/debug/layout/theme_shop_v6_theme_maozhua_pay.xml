<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme_shop_v6_bottomtool_app_list_bg"
    android:orientation="vertical" >

    <com.nd.hilauncherdev.shop.shop3.customview.ThemeHeaderView
        android:id="@+id/mHeadView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/detailScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/maozhua_pay_title_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ellipsize="end"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/maozhua_icon" />

                    <TextView
                        android:id="@+id/maozhua_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="#787878"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/coin_quan" />

                    <TextView
                        android:id="@+id/maozhua_quan_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:text="0"
                        android:singleLine="true"
                        android:textColor="#787878"
                        android:textSize="15sp" />
				<!-- 积分 -->
                <ImageView
                        android:id="@+id/iv_integral"
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/integral_icon"
                        />
                <TextView
                        android:id="@+id/integral_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="#787878"
                        android:textSize="15sp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                    <ImageView
                        android:id="@+id/help"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/theme_shop_pay_help"
                        android:scaleType="fitXY" />
                </LinearLayout>
                <LinearLayout
	                android:id="@+id/theme_shop_maozhua_pay_unlogin_layout"
	                android:layout_width="fill_parent"
	                android:layout_height="36dp"
	                android:background="@drawable/maozhua_pay_title_bg"
	                android:orientation="horizontal"
	                android:paddingLeft="16dp" 
	                android:gravity="center_vertical"
	                android:visibility="gone">
	                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:ellipsize="end"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:text="@string/personal_center_login"
                        android:textColor="#333333"
                        android:textSize="18sp" />
	                <LinearLayout 
	                    android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingRight="20dp">
		                <Button
	                        android:id="@+id/btn_login"
	                        android:layout_width="wrap_content"
	                        android:layout_height="33dp"
	                        android:background="@drawable/common_btn_blue_selector"
	                        android:paddingLeft="10dip"
	                        android:paddingRight="10dip"
	                        android:gravity="center"
	                        android:text="@string/account_login"
	                        android:textColor="#ffffff"
	                        android:textSize="14sp" />
	                </LinearLayout>
	            </LinearLayout>
            </FrameLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_shop_v2_search_quick_seperator" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="vertical" >

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="36dp"
				    android:layout_marginTop="8dp"
				    android:layout_marginBottom="8dp"
				    android:orientation="horizontal" >

				    <LinearLayout
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="bottom"
				        android:orientation="horizontal" >

				        <ImageView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_marginLeft="10dp"
				            android:layout_marginRight="8dp"
				            android:src="@drawable/common_blue_vertical_line" />

				        <TextView
				            android:id="@+id/theme_name"
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:ellipsize="end"
				            android:gravity="center"
				            android:singleLine="true"
				            android:textColor="#ff1c1c1c"
				            android:textSize="14sp" />
				    </LinearLayout>

				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:layout_marginRight="15dp"
				        android:gravity="right"
				        android:orientation="horizontal" >

				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:gravity="center"
				            android:text="@string/theme_shop_v2_maozhua_pay_price_title"
				            android:textColor="#ff676b6e"
				            android:textSize="12sp" />

				        <TextView
				            android:id="@+id/price"
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:ellipsize="end"
				            android:gravity="center"
				            android:singleLine="true"
				            android:textColor="#ffffc52d"
				            android:textSize="12sp" />

				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent"
				            android:ellipsize="end"
				            android:gravity="center"
				            android:singleLine="true"
				            android:text="@string/theme_shop_v6_theme_order_catpad"
				            android:textColor="#ff676b6e"
				            android:textSize="12sp" />
				    </LinearLayout>
				</LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:orientation="horizontal" 
                    android:gravity="center">
					<FrameLayout 
					    android:layout_width="132dip"
                        android:layout_height="198dip"
                        android:layout_marginRight="13dip"
                        android:background="@drawable/theme_shop_v6_list_pre_image_bg_2"
                        android:padding="3dip">
	                    <ImageView
	                        android:id="@+id/theme_pic_img"
	                        android:layout_width="132dip"
	                        android:layout_height="198dip"
	                        android:scaleType="fitXY" >
	                    </ImageView>
	                    <ImageView
	                        android:id="@+id/theme_series_img"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="bottom|right"
	                        android:src="@drawable/theme_series_mask"
	                        android:scaleType="fitCenter" >
	                    </ImageView>
					</FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_shop_v2_search_quick_seperator" />
            <!-- 会员购买主题界面 -->
			<LinearLayout
			    android:id="@+id/theme_shop_v6_theme_maozhua_pay_member_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical" >
				<!-- 没开通会员提示 -->
                <LinearLayout
                    android:id="@+id/theme_shop_v6_theme_maozhua_pay_unopen_member_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips1"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips2"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                    
                    <TextView
                        android:id="@+id/theme_shop_v6_theme_maozhua_pay_unopen_member_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips3"
                        android:textColor="#ffffc52d"
                        android:textSize="11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v6_theme_order_catpad"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                </LinearLayout>
				<!-- 已开通会员提示 -->
                <LinearLayout
                    android:id="@+id/theme_shop_v6_theme_maozhua_pay_open_member_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips4"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips5"
                        android:textColor="#ffffc52d"
                        android:textSize="11sp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips6"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                    
                    <TextView
                        android:id="@+id/theme_shop_v6_theme_maozhua_pay_open_member_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="@string/theme_shop_v2_maozhua_pay_open_member_tips3"
                        android:textColor="#ffffc52d"
                        android:textSize="11sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/theme_shop_v6_theme_order_catpad"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/theme_coupon_buybtn"
                    android:layout_width="240dp"
                    android:layout_height="37dip"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/common_btn_red_selector"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/theme_shop_v2_maozhua_pay_open_member"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
<!--                 <ImageView -->
<!-- 	                android:layout_width="fill_parent" -->
<!-- 	                android:layout_height="wrap_content" -->
<!-- 	                android:layout_marginTop="16dp" -->
<!-- 	                android:background="@drawable/theme_shop_v2_search_quick_seperator" /> -->
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical" >

<!--                 <LinearLayout -->
<!--                     android:id="@+id/needpay_layout" -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:gravity="bottom" -->
<!--                     android:orientation="horizontal" > -->

<!--                     <TextView -->
<!--                         android:layout_width="wrap_content" -->
<!--                         android:layout_height="wrap_content" -->
<!--                         android:gravity="bottom" -->
<!--                         android:text="@string/theme_shop_v2_maozhua_pay_need_title" -->
<!--                         android:textColor="#ff999999" -->
<!--                         android:textSize="11sp" /> -->

<!--                     <TextView -->
<!--                         android:id="@+id/recharge_money" -->
<!--                         android:layout_width="wrap_content" -->
<!--                         android:layout_height="wrap_content" -->
<!--                         android:ellipsize="end" -->
<!--                         android:gravity="bottom" -->
<!--                         android:singleLine="true" -->
<!--                         android:textColor="#fb8536" -->
<!--                         android:textSize="11sp" /> -->
<!--                 </LinearLayout> -->

                <Button
                    android:id="@+id/buybtn"
                    android:layout_width="240dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/common_btn_blue_selector"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/theme_shop_v2_maozhua_pay_btn_buy"
                    android:textColor="#fcfffc"
                    android:textSize="14sp" />
            </LinearLayout>

<!--             <ImageView -->
<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:background="@drawable/theme_shop_v2_search_quick_seperator" /> -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dip"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_shop_v2_maozhua_pay_help_tele_1"
                    android:textColor="#ff999999"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_shop_v2_maozhua_pay_help_tele_2"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_shop_v2_maozhua_pay_help_tele_num"
                        android:textColor="#ff00bcd5"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>