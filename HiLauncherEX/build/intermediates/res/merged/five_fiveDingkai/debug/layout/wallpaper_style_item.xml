<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="@drawable/myphone_click_item_blue"
    >
    
    
    <ImageView 
        android:id="@+id/style_img"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:contentDescription="@string/app_name"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/app_market_default_icon"
        />

    <TextView
        android:id="@+id/dialog_select_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/style_img"
        android:layout_toLeftOf="@+id/isCheck"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingLeft="20dip" />

      <CheckBox 
        android:id="@+id/isCheck"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dip"
        android:background="@drawable/common_checkbox_selector"
        android:button="@null"
        android:clickable="false"
        />

</RelativeLayout>