<?xml version="1.0" encoding="utf-8"?>
<com.nd.hilauncherdev.widget.shop.view.WidgetShopDownloadItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
     <RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dip"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/widget_shop_grid_item_bg"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/widget_shop_gridVIew_layout" >
        <ImageView
            android:id="@+id/widget_Icon"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:background="@drawable/widget_shop_widget_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/appwidget_loading" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/widget_Icon"
            android:layout_alignLeft="@+id/widget_Icon"
            android:layout_alignRight="@+id/widget_Icon"
            android:layout_alignParentBottom="true" >
            <TextView
	            android:id="@+id/widget_Name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="itemitemitemitemitemitemitemitemitem"
	            android:textColor="#999999"
	            android:textSize="12sp"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@+id/widget_download_btn" />
	         <TextView
	            android:id="@+id/widget_download_btn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#1E83DE"
	            android:textSize="12sp"
	            android:paddingLeft="16dp"
	            android:paddingRight="16dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:visibility="visible"
	            android:text=""/>
        </RelativeLayout>

        
    </RelativeLayout>
    
    </RelativeLayout>
</com.nd.hilauncherdev.widget.shop.view.WidgetShopDownloadItemView>