<?xml version="1.0" encoding="utf-8"?>    
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">    
  <!--  背景  -->    
    <item android:id="@android:id/background">    
        <shape>    
            <corners android:radius="0dip" />   
        <gradient    
             android:startColor="#eaeaea"    
             android:centerColor="#eaeaea"    
             android:endColor="#eaeaea" />    
        </shape>    
    </item>    
    <!--  第二进度条  -->    
    <item android:id="@android:id/secondaryProgress">    
        <clip>    
            <shape>    
                <corners android:radius="0dip" />    
                <gradient    
                   android:startColor="@color/common_title_little_text_color"    
                   android:centerColor="@color/common_title_little_text_color"    
                   android:endColor="@color/common_title_little_text_color" />    
            </shape>    
        </clip>    
    </item>    
    <!--  第一进度条  -->    
    <item android:id="@android:id/progress">    
        <clip>    
            <shape>    
                <corners android:radius="0dip" />    
                <gradient    
                   android:startColor="@color/common_title_little_text_color"    
                   android:centerColor="@color/common_title_little_text_color"    
                   android:endColor="@color/common_title_little_text_color" />     
            </shape>    
        </clip>    
    </item>    
         
</layer-list> 

