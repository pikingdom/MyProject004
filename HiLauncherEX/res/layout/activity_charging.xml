<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/charging_act"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:background="#ff33b5e5">  
    <com.nd.hilauncherdev.myphone.battery.charging.ViewPager
        android:id="@+id/charging_viewpager"
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
    	<FrameLayout 
		    android:layout_width="match_parent"  
		    android:layout_height="match_parent"  
		    android:background="#00000000" > 
		    <com.nd.hilauncherdev.myphone.battery.charging.WaveView  
		        android:id="@+id/waveview_top"
		        android:layout_width="match_parent"  
		        android:background="#00000000"  
		        android:layout_height="match_parent"
		        android:visibility="invisible"/>  
		     <com.nd.hilauncherdev.myphone.battery.charging.WaveView  
		        android:id="@+id/waveview_bottom"
		        android:layout_width="match_parent"  
		        android:background="#00000000"  
		        android:layout_height="match_parent"
		        android:visibility="invisible"/>  
		  
		     <RelativeLayout
		        android:id="@+id/content_panel"
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent"
		        android:paddingTop="15dp" >
		        
		         <LinearLayout 
		             android:id="@+id/content_top"
		             android:layout_width="match_parent" 
		       		 android:layout_height="50dp"
		       		 android:gravity="center"
		       		 android:orientation="horizontal"
		       		 android:layout_alignParentTop="true"
		       		 android:layout_marginTop="10dp">
		             <TextView 
		                 android:id="@+id/content_time"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:layout_marginLeft="15dp"
		                 android:gravity="center_vertical"
		                 android:text="16:21"
		                 android:textSize="30sp"
		                 android:textColor="@android:color/white"
		                 android:layout_weight="2.0"/>
		             <ImageView 
		                 android:id="@+id/content_close"
		                 android:layout_width="60dp"
		                 android:layout_height="match_parent"
		                 android:src="@drawable/panda_box_more_icon_normal"
		                 android:layout_weight="1.0"
		                 />
		         </LinearLayout>
		         <TextView 
		             android:id="@+id/close_charging_act"
	                 android:layout_width="120dp"
	                 android:layout_height="50dp"
	                 android:gravity="center"
	                 android:layout_marginRight="12dp"
	                 android:text="关闭"
	                 android:textColor="@android:color/black"
	                 android:background="@android:color/white"
	                 android:layout_below="@id/content_top"
	                 android:layout_alignParentRight="true"
	                 android:visibility="invisible"/>
		         <LinearLayout 
		            android:id="@+id/content_charging"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:gravity="center"
			        android:layout_marginTop="10dp"
			        android:layout_marginBottom="35dp"
			        android:layout_below="@id/close_charging_act">
		             <LinearLayout 
		                 android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:orientation="horizontal">
		                  <TextView 
				             android:id="@+id/charging_percent"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:gravity="center"
				             android:textSize="60sp"
				             android:text=""
				             android:textColor="@android:color/white"/>
		                  <TextView 
				             android:id="@+id/charging_percent"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:gravity="center"
				             android:textSize="30sp"
				             android:text="%"
				             android:textColor="@android:color/white"/>
		             </LinearLayout>
			        
			        <TextView 
			             android:id="@+id/charging_need_time"
			             android:layout_width="match_parent"
			             android:layout_height="wrap_content"
			             android:gravity="center"
			             android:textSize="14sp"
			             android:text="剩余时间28分钟"
			             android:textColor="@android:color/white"/>
			    </LinearLayout>
			    <TextView 
		             android:id="@+id/charging_need_time"
		             android:layout_alignParentBottom="true"
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:gravity="center"
		             android:textSize="18sp"
		             android:text="滑动解锁 >"
		             android:textColor="@android:color/white"
		             android:layout_marginBottom="35dp"/>
			    <ScrollView 
			        android:layout_width="match_parent"
		             android:layout_height="match_parent"
		             android:layout_above="@id/charging_need_time"
		             android:layout_below="@id/content_charging">
			        <LinearLayout 
			            android:layout_width="match_parent"
		             	android:layout_height="match_parent"
		             	android:orientation="vertical"
		             	android:padding="10dp"
		             	android:gravity="center">
		             	<LinearLayout 
		             	    android:layout_width="wrap_content"
		             		android:layout_height="wrap_content"
		             		android:orientation="horizontal">
		             	    <TextView 
		             	        android:id="@+id/charging_fast_tv"
		             	        android:layout_width="wrap_content"
		             			android:layout_height="wrap_content"
		             			android:drawableTop="@drawable/battery_status_icon1"
		             			android:drawablePadding="5dp"
		             			android:text="快速"
		             			android:textSize="14sp"
		             			android:gravity="center"
		             			android:layout_margin="8dp"
		             			android:textColor="@android:color/white"/>
		             	    <TextView 
		             	        android:id="@+id/charging_tv_link_1"
		             	        android:layout_width="wrap_content"
		             			android:layout_height="wrap_content"
		             			android:drawableTop="@drawable/tool_more"
		             			android:drawablePadding="3dp"
		             			android:text=""
		             			android:textSize="14sp"
		             			android:gravity="center"
		             			android:layout_margin="8dp"
		             			android:textColor="@android:color/white"/>
		             	    <TextView 
		             	        android:id="@+id/charging_constant_tv"
		             	        android:layout_width="wrap_content"
		             			android:layout_height="wrap_content"
		             			android:drawableTop="@drawable/battery_status_icon2"
		             			android:drawablePadding="5dp"
		             			android:text="恒流"
		             			android:textSize="14sp"
		             			android:gravity="center"
		             			android:layout_margin="8dp"
		             			android:textColor="@android:color/white"/>
		             	    <TextView 
		             	        android:id="@+id/charging_tv_link_2"
		             	        android:layout_width="wrap_content"
		             			android:layout_height="wrap_content"
		             			android:drawableTop="@drawable/tool_more"
		             			android:drawablePadding="3dp"
		             			android:text=""
		             			android:textSize="14sp"
		             			android:gravity="center"
		             			android:layout_margin="8dp"
		             			android:textColor="@android:color/white"/>
		             	    <TextView 
		             	        android:id="@+id/charging_trickle_tv"
		             	        android:layout_width="wrap_content"
		             			android:layout_height="wrap_content"
		             			android:drawableTop="@drawable/battery_status_icon3"
		             			android:drawablePadding="5dp"
		             			android:text="涓流"
		             			android:textSize="14sp"
		             			android:gravity="center"
		             			android:layout_margin="8dp"
		             			android:textColor="@android:color/white"
		             			/>
		             	</LinearLayout>

		             	<FrameLayout
		             	    android:id="@+id/ads_container"
		             	    android:layout_width="match_parent"
		             	    android:layout_height="wrap_content"
		             	    android:layout_marginBottom="8dp" 
		             	    android:layout_marginTop="10dp" >
		             	    <ImageView
		             	        android:id="@+id/charging_ad"
		             	        android:layout_width="wrap_content"
		             	        android:layout_height="wrap_content"
		             	        />
		             	</FrameLayout>
			        </LinearLayout>
			    </ScrollView>
		     </RelativeLayout>
	    </FrameLayout>
   	</com.nd.hilauncherdev.myphone.battery.charging.ViewPager>
</FrameLayout>  