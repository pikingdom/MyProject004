<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/notify_bg"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/search_left_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/search_left_sep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/search_left_logo"
            android:background="@drawable/notify_bg_2x"
            android:orientation="horizontal"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="4.6dip"
            android:paddingTop="5.5dip" >

            <TextView
                android:id="@+id/searchText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:text="@string/common_button_search"
                android:textSize="14sp"
                 />

            <ImageView
                android:id="@+id/searchImage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_above="@id/searchText"
                android:layout_centerHorizontal="true"
                android:src="@drawable/notify_search" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/notify_split" />

        <RelativeLayout
            android:id="@+id/recentAppBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="4.6dip"
            android:paddingTop="5.5dip" >

            <TextView
                android:id="@+id/recentAppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:text="@string/notification_bar_last_app"
                android:textSize="14sp"
                 />

            <ImageView
                android:id="@+id/recentAppImage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_above="@id/recentAppText"
                android:layout_centerHorizontal="true" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/notify_split" />

        <RelativeLayout
            android:id="@+id/toolsBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="4.6dip"
            android:paddingTop="5.5dip" >

            <TextView
                android:id="@+id/toolsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="@string/notification_bar_ketset" />

            <ImageView
                android:id="@+id/toolsImage"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_above="@id/toolsText"
                android:layout_centerHorizontal="true"
                android:src="@drawable/notify_tools" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/notify_split" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.82" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/flowValue"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/notfiy_flow"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/netflow_info_fetching"
                    android:textColor="#00bcd5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/batteryValue"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/notfiy_battery"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#98744E"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/notify_split" />

        <RelativeLayout
            android:id="@+id/settingsBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1" >

            <ImageView
                android:id="@+id/settingsImage"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_centerInParent="true"
                android:src="@drawable/notify_settings" >
            </ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.12" >
        </TextView>
    </LinearLayout>

</FrameLayout>