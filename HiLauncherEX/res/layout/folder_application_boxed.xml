<?xml version="1.0" encoding="utf-8"?>
<com.nd.hilauncherdev.folder.view.FolderBoxedViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/icon_bg_selector">
	
	<RelativeLayout android:id="@+id/animation_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.nd.hilauncherdev.app.view.FolderAppTextView
			android:id="@+id/item_view" 
			android:layout_width="80dip"
			android:layout_height="90dip"
			android:layout_centerInParent="true"
			android:paddingLeft="3dip"
			android:paddingRight="3dip" />
			
		<ImageView android:id="@+id/item_close_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/drawer_close_btn"
			android:visibility="invisible" />
		
		<ImageView android:id="@+id/item_choosed_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/drawer_choosed_icon"
			android:visibility="invisible" />
			
	</RelativeLayout>

</com.nd.hilauncherdev.folder.view.FolderBoxedViewGroup>
