<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        >
    <RelativeLayout
            android:id="@+id/launcher_notification_open_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/launcher_notification_fistsetting_height"
            android:background="@drawable/launcher_notification_item_bg"
            android:orientation="vertical"
            android:visibility="visible">
        <TextView
                android:id="@+id/launcher_notification_open_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:gravity="left|center_vertical"
                android:textSize="14sp"
                android:text="@string/youbao_ask_title"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="right">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#4cffffff"
                    android:textSize="14sp"
                    android:id="@+id/youbao_still_close"
                    android:text="@string/youbao_still_close"
                    android:background="@color/launcher_notification_item_btn_normal"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/launcher_notification_split_lines"
                    android:background="@color/launcher_notification_item_btn_normal"/>
            <TextView
                    android:id="@+id/youbao_keep_open"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff00bed2"
                    android:textSize="14sp"
                    android:text="@string/youbao_keep_open"
                    android:background="@color/launcher_notification_item_btn_normal"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>