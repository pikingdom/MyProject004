<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:paddingBottom="2dip"
	android:layout_width="fill_parent" android:id="@+id/iconLayout">
	<ImageView android:layout_height="30.6dip" android:id="@+id/item_image"
		android:layout_width="30.6dip" android:layout_centerHorizontal="true" />
	
	<com.nd.hilauncherdev.app.view.FontableTextView 
		android:id="@+id/item_text" 
		android:textColor="#000000"
		android:layout_below="@+id/item_image" 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:paddingTop="2dip" 
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textSize="12dp" />
</RelativeLayout>