<?xml version="1.0" encoding="utf-8"?>
<com.nd.hilauncherdev.launcher.menu.thememenu.LauncherThemeMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/launcher_theme_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:visibility="gone" >
    <LinearLayout
        android:id="@+id/launcher_theme_menu_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#E5000000"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_apply_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/widget_wallpaper_drawer_previous_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/launcher_theme_menu_previous"
            android:textColor="#4CFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/launcher_theme_menu_confirm_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/launcher_theme_menu_confirm"
            android:textColor="#4CFFFFFF"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_more_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:layout_weight="1.0"
            android:clickable="true"
            android:drawablePadding="10dip"
            android:drawableTop="@drawable/launcher_theme_menu_more_selector"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/launcher_theme_menu_more"
            android:textColor="#4CFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/launcher_theme_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#E5000000"
        android:orientation="vertical" >
	    <!-- 淘宝广告 -->
	    <TextView
	        android:id="@+id/theme_menu_ads_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/widget_wallpaper_drawer_ads_title"
	        android:textSize="14sp"
	        android:layout_marginLeft="12dip"
	        android:layout_marginTop="12dip"
	        android:textColor="#ffffff" />
	    <FrameLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="6dip"
	        android:layout_marginRight="6dip"
	        android:layout_marginTop="12dip"
	        android:layout_marginBottom="6dip" >
	        <LinearLayout 
	            android:id="@+id/theme_menu_ads_layout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="8dp" >
		        <com.nd.hilauncherdev.shop.shop6.AdImageView
		            android:id="@+id/theme_menu_ads_image"
		            android:layout_width="match_parent"
		            android:layout_height="100dip"
		            android:scaleType="fitXY" />
	        </LinearLayout>
	        <TextView 
	            android:id="@+id/theme_menu_ads_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/widget_wallpaper_drawer_ads_hint"
	            android:textSize="12sp"
	            android:padding="3dip"
	            android:layout_gravity="top|right"
	            android:textColor="@android:color/white"
	            android:background="#7f000000"/>
	    </FrameLayout>
	</LinearLayout>
</com.nd.hilauncherdev.launcher.menu.thememenu.LauncherThemeMenu>