<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:paddingTop="@dimen/myphone_item_padding" android:paddingBottom="@dimen/myphone_item_padding"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/appname"
		android:textColor="@color/myphone_common_text_color"
		android:layout_alignParentLeft="true"
		android:padding="10dp"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="@dimen/myphone_item_text_size"
		android:singleLine="true" android:ellipsize="end"
		android:layout_marginLeft="@dimen/myphone_margin_left"
		android:layout_centerVertical="true" android:gravity="center_vertical" />

	<TextView android:id="@+id/apptime"
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:textSize="@dimen/myphone_item_little_text_size"
		android:padding="0dip" android:gravity="center_vertical"
		android:singleLine="true"
		android:textColor="@color/black"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_marginRight="10dip" />
</RelativeLayout>