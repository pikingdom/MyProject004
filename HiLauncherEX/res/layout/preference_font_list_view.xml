<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/font_style_dialog_layout">
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal" 
	    android:id="@+id/font_style_dialog_linearlayout">
		<Button
        android:id="@+id/font_style_dialog_button1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@drawable/app_choose_r_btn"
        android:text="@string/settings_font_style_reset" />
		<Button
        android:id="@+id/font_style_dialog_button2"
       	android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:background="@drawable/app_choose_r_btn"
        android:text="@string/common_button_cancel" />
	</LinearLayout>
	<ListView 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:clickable="true"
		android:listSelector="@drawable/myphone_click_item_blue"
	    android:divider="@drawable/app_choose_r_btn" 
	    android:dividerHeight="1dip"
		android:cacheColorHint="#00000000"
		android:id="@+id/font_style_dialog_listview"
		android:layout_above="@id/font_style_dialog_linearlayout">
	</ListView>
</RelativeLayout>