<?xml version="1.0" encoding="utf-8"?>
<!-- 新手引导圆背景 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 左上角黑色圆 -->
    <ImageView android:id="@+id/circle_1"
        android:layout_width="7dip" android:layout_height="7dip" 
        android:src="@drawable/readme_round_black"
        android:layout_gravity="top|left"
        android:scaleType="fitCenter"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="40dip" />
    <!-- 右上角蓝色圆 -->
    <ImageView android:id="@+id/circle_2"
        android:layout_width="50dip" android:layout_height="50dip" 
        android:src="@drawable/readme_round_blue"
        android:layout_gravity="top|right"
        android:scaleType="fitCenter"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip" />
    <!-- 左上角红色圆 -->
    <ImageView android:id="@+id/circle_3"
        android:layout_width="40dip" android:layout_height="40dip" 
        android:src="@drawable/readme_round_red"
        android:layout_gravity="top|left"
        android:scaleType="fitCenter"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="100dip" />
    <!-- 中间左偏下黄色圆 -->
    <ImageView android:id="@+id/circle_4"
        android:layout_width="50dip" android:layout_height="50dip" 
        android:src="@drawable/readme_round_yellow"
        android:layout_gravity="bottom|left"
        android:scaleType="fitCenter"
        android:layout_marginLeft="30dip"
        android:layout_marginBottom="150dip" />
    <!-- 中间右偏下蓝色圆 -->
    <ImageView android:id="@+id/circle_5"
        android:layout_width="20dip" android:layout_height="20dip" 
        android:src="@drawable/readme_round_blue"
        android:layout_gravity="bottom|right"
        android:scaleType="fitCenter"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="120dip" />
    <!-- 左下角黄色圆 -->
    <ImageView android:id="@+id/circle_6"
        android:layout_width="10dip" android:layout_height="10dip" 
        android:src="@drawable/readme_round_black"
        android:layout_gravity="bottom|left"
        android:scaleType="fitCenter"
        android:layout_marginLeft="60dip"
        android:layout_marginBottom="80dip" />
    <!-- 右下角红色圆 -->
    <ImageView android:id="@+id/circle_7"
        android:layout_width="10dip" android:layout_height="10dip" 
        android:src="@drawable/readme_round_blue"
        android:layout_gravity="bottom|right"
        android:scaleType="fitCenter"
        android:layout_marginRight="50dip"
        android:layout_marginBottom="20dip" />
</FrameLayout>