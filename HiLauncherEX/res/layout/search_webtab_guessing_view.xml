<?xml version="1.0" encoding="utf-8"?><!-- 热词列表展示界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotword_box_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_remind_gray_bg">
    <!-- 联想词界面 -->
    <ListView android:id="@+id/guessingWordView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:layout_marginLeft="@dimen/search_result_list_margin"
        android:layout_marginRight="@dimen/search_result_list_margin"
        android:divider="@color/navigation_search_bg"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        />
</LinearLayout>