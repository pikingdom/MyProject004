<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="20dip"
    android:paddingRight="20dip">

    <RelativeLayout
        android:id="@+id/dialog_title_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_top_layout_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/app_choose_top_background"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingTop="2dip"
            android:textColor="@color/dialog_title_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title_line"
        android:background="@drawable/app_choose_bottom_background" >

        <ListView
            android:id="@+id/dialog_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/myphone_common_split" />
    </RelativeLayout>

</RelativeLayout>