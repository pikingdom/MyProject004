<?xml version="1.0" encoding="utf-8"?>
<com.nd.hilauncherdev.widget.wallpaper.v7.WallpaperDrawerContentView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5000000"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_wallpaper_drawer_list_title"
        android:textSize="14sp"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="12dip"
        android:textColor="#ffffff" />
    <com.nd.hilauncherdev.widget.wallpaper.FloatScrollView
        android:id="@+id/wallpaper_sliding_view"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="12dip" />
    <!-- 淘宝广告 -->
    <TextView
        android:id="@+id/widget_wallpaper_drawer_ads_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_wallpaper_drawer_ads_title"
        android:textSize="14sp"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="12dip"
        android:textColor="#ffffff" />
    <FrameLayout
        android:id="@+id/taobao_ads_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="6dip" >
        <LinearLayout 
            android:id="@+id/taobao_ads_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" >
	        <com.nd.hilauncherdev.shop.shop6.AdImageView
	            android:id="@+id/taobao_ads_image"
	            android:layout_width="match_parent"
	            android:layout_height="100dip"
	            android:scaleType="fitXY" />
        </LinearLayout>
        <TextView 
            android:id="@+id/taobao_ads_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_wallpaper_drawer_ads_hint"
            android:textSize="12sp"
            android:padding="3dip"
            android:layout_gravity="top|right"
            android:textColor="@android:color/white"
            android:background="#7f000000"/>
    </FrameLayout>

</com.nd.hilauncherdev.widget.wallpaper.v7.WallpaperDrawerContentView>