<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.nd.hilauncherdev.webconnect.downloadmanage.activity.DownloadCategoryMenu
        android:id="@+id/category_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title" />

    <com.nd.hilauncherdev.webconnect.downloadmanage.activity.DownloadCommonView
        android:id="@+id/common_view_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_title_bg" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/common_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/common_header_title_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/downloadmanager_btn_menu" />

        <ImageView
            android:id="@+id/iv_guide"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn_menu"
            android:layout_alignTop="@id/btn_menu"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:src="@drawable/downloadmanager_guide_point" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_menu"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/myphone_btn_ring_wallpaper_search_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/masking_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="#77000000"
        android:visibility="gone" />

    <com.nd.hilauncherdev.webconnect.downloadmanage.activity.DownloadCommonView
        android:id="@+id/common_view_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>