<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pushNofity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/push_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dip"
        android:paddingLeft="4dip"
        android:paddingRight="7dip"
        android:paddingTop="7dip" >

        <ImageView
            android:id="@+id/mainPic"
            android:layout_width="120dip"
            android:layout_height="96dip"
            android:src="@drawable/sohu_advice_default"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/push_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/push_left" >

        <ImageView
            android:id="@+id/iconPic"
            android:layout_width="14dip"
            android:layout_height="14dip"
            android:layout_marginTop="16dip"
            android:scaleType="fitXY"
            android:src="@drawable/sohu_newssdk_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="12dip"
            android:layout_toRightOf="@id/iconPic"
            android:text="@string/newssdk_client"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pushTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dip"
            android:layout_marginRight="4dip"
            android:textColor="@color/color_6e6e6e"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/pushContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="15dip"
            android:textColor="@color/color_6e6e6e"
            android:textSize="10dp" 
            android:maxLines="2"/>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/var/lib/jenkins/workspace/SohuNews_android_lite_fragment/default/newsliteapi/src/main/res/layout/sohu_push_notify.xml -->