<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="65dp">

    <TextView
        android:id="@+id/tvTagName"
        android:layout_width="@dimen/feed_item_tag_width"
        android:layout_height="@dimen/feed_item_tag_height"
        android:layout_centerVertical="true"
        android:background="@drawable/tag_bg_selector"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:singleLine="true"
        android:textColor="@color/common_title_little_text_color"
        android:textSize="@dimen/feed_item_tag_text_size" />


    <TextView
        android:id="@+id/tvVoteNum"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:text="123"
        android:gravity="left|center_vertical"
        android:textColor="#afafb2"
        android:textSize="@dimen/feed_item_tag_text_size" />

    <LinearLayout
        android:id="@+id/ivCollectContainer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvVoteNum"
        android:gravity="center_vertical|right">

        <com.nd.hilauncherdev.shop.shop3.feed.widget.ImageViewPraise
            android:id="@+id/ivCollect"
            android:padding="2.5dp"
            android:layout_width="@dimen/feed_footer_icon_size"
            android:layout_height="@dimen/feed_footer_icon_size"
            android:src="@drawable/theme_shop_v6_detail_collect_btn_normal" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvCommentNum"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/ivCollectContainer"
        android:gravity="center"
        android:textColor="#afafb2"
        android:textSize="@dimen/feed_item_tag_text_size" />

    <ImageView
        android:id="@+id/ivComment"
        android:padding="2.5dp"
        android:layout_width="@dimen/feed_footer_icon_size"
        android:layout_height="@dimen/feed_footer_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tvCommentNum"
        android:src="@drawable/ic_comment_outline_grey" />


</RelativeLayout>

