<?xml version="1.0" encoding="utf-8"?>
<!-- 热词内容显示布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/hotword_box_data_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 第一列 -->

                <LinearLayout
                    android:id="@+id/hotword_box_content_first_row"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />
                <!-- 第二列 -->

                <LinearLayout
                    android:id="@+id/hotword_box_content_second_row"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />
                <!-- 第三列 -->

                <LinearLayout
                    android:id="@+id/hotword_box_content_third_row"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />
            </LinearLayout>
            <!-- 换一批按钮 -->

            <LinearLayout
                android:id="@+id/hotword_box_refurbish"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="2dp"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/theme_shop_v2_theme_search_refash_btn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/theme_shop_v6_exchange_theme"
                        android:textColor="@color/title_main_color_light"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- 无网络 -->

    <LinearLayout
        android:id="@+id/search_no_data_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>