<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#fff4f4f4"
    android:gravity="top"
    android:orientation="vertical" >

    <com.nd.hilauncherdev.shop.shop3.customview.ThemeHeaderView
        android:id="@+id/mHeadView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/detailScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mHeadView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/open_member_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.5dp"
                android:src="@drawable/theme_shop_open_member_activity_from_pay_cat" />
            <TextView
                android:id="@+id/open_member_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/theme_shop_open_member_from_pay_tips"
                android:textColor="#ff676b6e"
                android:textSize="13sp" />
            <!-- 立即开通按钮 -->

            <Button
                android:id="@+id/open_member_btn"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15.5dp"
                android:background="@drawable/common_btn_blue_selector"
                android:text="@string/theme_shop_open_member_from_pay_btn1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/open_member_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:layout_marginTop="21dp"
                android:background="@drawable/bg_card">
				<LinearLayout 
				    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">
	                <ImageView
	                     android:id="@+id/common_blue_vertical_line"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:layout_marginLeft="3dp"
	                     android:layout_marginRight="3dp"
	                     android:src="@drawable/common_blue_vertical_line" />
	                <TextView
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:gravity="center_vertical"
	                    android:text="@string/theme_shop_open_member_from_pay_tips1"
	                    android:textColor="@color/black"
	                    android:textSize="13sp" />
				</LinearLayout>
                <!-- 开通P3 -->

                <LinearLayout
                    android:id="@+id/open_member_p3_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/open_member_p3_expand_layout"
                        android:layout_width="match_parent"
                        android:layout_height="85.5dp">
						<LinearLayout 
						    android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_toLeftOf="@+id/open_member_p3_open_btn"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <LinearLayout 
                                android:layout_width="match_parent"
                            	android:layout_height="wrap_content"
                                android:orientation="horizontal">
						    	<ImageView
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginRight="9.5dp"
			                        android:src="@drawable/associator_gold_medal_big" />
                                <TextView
	                                android:layout_width="wrap_content"
	                                android:layout_height="match_parent"
	                                android:gravity="center"
	                                android:ellipsize="end"
	                                android:singleLine="true"
	                                android:text="@string/personal_center_setting_level4"
	                                android:textColor="@color/black"
	                                android:textSize="13sp" />
                                <TextView
	                                android:layout_width="wrap_content"
	                                android:layout_height="match_parent"
	                                android:gravity="center"
	                                android:ellipsize="end"
	                                android:singleLine="true"
	                                android:layout_marginLeft="14dp"
	                                android:text="@string/theme_shop_open_member_from_pay_p3_title"
	                                android:textColor="#ffffc52d"
	                                android:textSize="13sp" />
						    </LinearLayout>
	                        <TextView
	                            android:layout_width="match_parent"
	                            android:layout_height="wrap_content"
	                            android:gravity="center_vertical"
	                            android:layout_marginTop="10.5dp"
	                            android:text="@string/theme_shop_open_member_from_pay_p3_content"
	                            android:textColor="#787878"
	                            android:textSize="12sp" />
						</LinearLayout>
                        <Button
                            android:id="@+id/open_member_p3_open_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/common_btn_blue_selector"
                            android:text="@string/theme_shop_open_member_from_pay_buy"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/theme_shop_v2_search_quick_seperator" />
                </LinearLayout>
                <!-- 开通P4 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <RelativeLayout
                        android:id="@+id/open_member_p4_expand_layout"
                        android:layout_width="match_parent"
                        android:layout_height="85.5dp">
						<LinearLayout 
						    android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_toLeftOf="@+id/open_member_p4_open_btn"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <LinearLayout 
                                android:layout_width="match_parent"
                            	android:layout_height="wrap_content"
                                android:orientation="horizontal">
						    	<ImageView
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:layout_marginRight="9.5dp"
			                        android:src="@drawable/associator_diamond_medal_big" />
                                <TextView
	                                android:layout_width="wrap_content"
	                                android:layout_height="match_parent"
	                                android:gravity="center"
	                                android:ellipsize="end"
	                                android:singleLine="true"
	                                android:text="@string/personal_center_setting_level5"
	                                android:textColor="@color/black"
	                                android:textSize="13sp" />
                                <TextView
	                                android:layout_width="wrap_content"
	                                android:layout_height="match_parent"
	                                android:gravity="center"
	                                android:ellipsize="end"
	                                android:singleLine="true"
	                                android:layout_marginLeft="14dp"
	                                android:text="@string/theme_shop_open_member_from_pay_p4_title"
	                                android:textColor="#ffffc52d"
	                                android:textSize="13sp" />
						    </LinearLayout>
	                        <TextView
	                            android:layout_width="match_parent"
	                            android:layout_height="wrap_content"
	                            android:gravity="center_vertical"
	                            android:layout_marginTop="10.5dp"
	                            android:text="@string/theme_shop_open_member_from_pay_p4_content"
	                            android:textColor="#787878"
	                            android:textSize="12sp" />
						</LinearLayout>
                        <Button
                            android:id="@+id/open_member_p4_open_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/common_btn_blue_selector"
                            android:text="@string/theme_shop_open_member_from_pay_buy"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/open_member_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.5dp"
                android:layout_marginTop="15.5dp"
                android:gravity="center"
                android:text="@string/theme_shop_open_member_from_pay_member_detail"
                android:textColor="#ffffc52d"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>