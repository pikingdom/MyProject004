<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/theme_shop_v6_guide_set_launcher_banner_view_strategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/theme_shop_v6_guide_set_launcher_banner_view_strategy"
        />
    <TextView
         android:layout_toRightOf="@+id/theme_shop_v6_guide_set_launcher_banner_view_strategy"
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:gravity="center_vertical"
         android:layout_marginLeft="8dip"
         android:text="@string/theme_shop_v6_guide_set_launcher_banner_view_strategy"
         android:textColor="#ff181818"
         android:textSize="14sp"/>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="16dp"
        android:src="@drawable/pre_more"
        />
</RelativeLayout>
