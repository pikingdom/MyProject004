<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_detail_item_bg_color"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/promotion_banner_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/promotion_banner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/theme_shop_v6_themedetail_banner_title1"
            android:textColor="#595959"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/theme_shop_v6_themedetail_banner_title2"
            android:textColor="@color/common_title_little_text_color"
            android:visibility="gone"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/theme_detail_comment_go"
            android:layout_width="@dimen/theme_shop_v6_theme_detail_go_width"
            android:layout_height="@dimen/theme_shop_v6_theme_detail_go_height"
            android:layout_marginLeft="13dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/theme_detail_go" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/promotion_banner_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout>