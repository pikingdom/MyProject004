<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/theme_app_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:gravity="center_vertical"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" >

            <TextView
                android:id="@+id/downloadAllApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/theme_shop_v6_theme_detail_comment_btn"
                android:gravity="center"
                android:text="@string/theme_shop_v6_themeapp_all_down"
                android:textColor="#878787"
                android:textSize="16sp"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/theme_app_down_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/downloadAllApp"
                android:layout_alignBottom="@+id/downloadAllApp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/theme_shop_v2_themeapp_view_title"
                android:textColor="#595959"
                android:textSize="16sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/theme_app_list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/theme_shop_v6_grid_item_line"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:gravity="center"
            android:listSelector="@drawable/theme_shop_v6_listview_itembg"
            android:paddingLeft="6dp"
            android:transcriptMode="disabled" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/theme_app_plug_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" >

            <TextView
                android:id="@+id/theme_app_plug_down_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:text="@string/theme_shop_v2_themeapp_plug_view_title"
                android:textColor="#595959"
			    android:textSize="16sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/theme_app_plug_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/theme_shop_v6_grid_item_line"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:gravity="center"
            android:listSelector="@drawable/theme_shop_v6_listview_itembg"
            android:paddingLeft="6dp"
            android:transcriptMode="disabled" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/theme_app_theme_rec_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" >

            <TextView
                android:id="@+id/theme_app_theme_rec_down_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dip"
                android:paddingLeft="10dip"
                android:text="@string/theme_shop_v2_themeapp_rec_view_title"
                android:textColor="#595959"
			    android:textSize="16sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/theme_app_theme_rec_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/theme_shop_v6_grid_item_line"
            android:dividerHeight="1dip"
            android:fadingEdge="none"
            android:gravity="center"
            android:listSelector="@drawable/theme_shop_v6_listview_itembg"
            android:paddingLeft="6dp"
            android:transcriptMode="disabled" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/loadmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:text="@string/theme_shop_v6_themedetail_relate_apps_more"
        android:textColor="@color/common_title_little_text_color"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>