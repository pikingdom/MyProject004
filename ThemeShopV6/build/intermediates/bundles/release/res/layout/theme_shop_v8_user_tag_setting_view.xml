<?xml version="1.0" encoding="utf-8"?>
<com.nd.hilauncherdev.shop.shop6.v8recommend.ThemeShopV8UserTagSettingView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1.0"
		android:orientation="vertical" >
		<ImageView android:id="@+id/top_slogan"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:layout_marginBottom="15dip"
			android:src="@drawable/theme_shop_v8_user_label_setting_slogan_large" />

		<GridView
			android:id="@+id/user_tag_grid"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"
			android:numColumns="3"
			android:paddingLeft="30dip"
			android:paddingRight="30dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
			android:clipToPadding="false"
			android:gravity="center"
			android:scrollbars="none"
			android:cacheColorHint="#00000000"
			android:horizontalSpacing="22dip"
			android:listSelector="#00000000"
			android:stretchMode="columnWidth"
			android:transcriptMode="disabled"
			android:verticalSpacing="12dip" />
		<TextView android:id="@+id/grid_loading"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/txt_loading"
			android:textSize="12sp"
			android:textColor="#000000"
			android:visibility="invisible"/>
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="37dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/common_btn_blue_selector"
            android:text="@string/common_button_confirm" />
        <TextView android:id="@+id/hint_user_tag_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4f606f"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginBottom="10dip"
            android:text="@string/user_tag_setting_hint" />
    </LinearLayout>

</com.nd.hilauncherdev.shop.shop6.v8recommend.ThemeShopV8UserTagSettingView>