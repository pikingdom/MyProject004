<?xml version="1.0" encoding="utf-8"?>
<!--游戏主题推荐游戏app-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/theme_detail_item_bg_color"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="10dp"
    android:paddingBottom="8dp" >
    <ImageView
        android:id="@+id/themedetail_game_theme_recommend_app_icon"
        android:layout_width="53dip"
        android:layout_height="53dp"
        android:padding="1dip"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/app_market_default_icon"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/themedetail_game_theme_recommend_app_icon"
        android:layout_toLeftOf="@+id/themedetail_game_theme_recommend_app_btn_layout"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/themedetail_game_theme_recommend_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/themedetail_game_theme_recommend_app_descript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:text="version：6.1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#ff898989"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/themedetail_game_theme_recommend_app_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/themedetail_game_theme_recommend_app_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/common_button_download"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/common_btn_blue"/>
    </LinearLayout>
</RelativeLayout>