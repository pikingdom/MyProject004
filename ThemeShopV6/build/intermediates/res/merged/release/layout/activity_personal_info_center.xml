<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    
    <!-- 标题栏 -->

    <com.nd.hilauncherdev.framework.view.commonview.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    
	    <LinearLayout
	        android:id="@+id/contentLy"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@android:color/white"
	        android:gravity="center_vertical"
	        android:orientation="vertical"
	        android:paddingLeft="@dimen/theme_shop_v6_personal_center_common_padding_h"
	        android:paddingRight="@dimen/theme_shop_v6_personal_center_common_padding_h" >
	
	        <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
	            android:id="@+id/personal_info_head"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/myphone_common_split" />
	
	        <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
	            android:id="@+id/personal_info_nick"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/myphone_common_split" />
	
	        <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
	            android:id="@+id/personal_info_sex"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/myphone_common_split" />
	
	        <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
	            android:id="@+id/personal_info_birthday"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
	        
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginRight="5dp"
	            android:background="@drawable/myphone_common_split" />
	
	        <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
	            android:id="@+id/personal_info_address"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
	        
	    </LinearLayout>
	    
	    <com.nd.hilauncherdev.shop.shop3.customview.NetErrorAndSettingView
	        android:id="@+id/neterror_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:visibility="gone"
	         />
	    
	    <include android:id="@+id/loading" layout="@layout/theme_shop_v6_loading_style_mid"/>
	    
	    
	</RelativeLayout>

</LinearLayout>
