<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/feed_main_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feed_main_header">

    <RelativeLayout
        android:id="@+id/feed_message_container"
        android:layout_width="80dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/feed_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/feed_message_tip"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/feed_message_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:src="@drawable/feed_notice_bg"/>



</RelativeLayout>