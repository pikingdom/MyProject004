<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:gravity="center"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content">
	<LinearLayout 
		android:id="@+id/item" android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center_horizontal" android:layout_gravity="center" 
	    android:orientation="vertical" >
		<FrameLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">	
			<com.nd.hilauncherdev.shop.widget.RoundCornerImageView android:layout_gravity="center" android:id="@+id/thumb"
				android:layout_width="fill_parent" android:layout_height="@dimen/theme_shop_ranking_img_height"
				android:scaleType="fitXY"/>
			<ImageView android:layout_gravity="top|right|center"
				android:id="@+id/mask_using" android:visibility="gone"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
	   			android:layout_marginRight="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
				android:src="@drawable/theme_using" />
			<ImageView android:layout_gravity="bottom|right|center"
				android:id="@+id/mask_upgradeable" android:visibility="gone"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
	   			android:layout_marginRight="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
				android:src="@drawable/theme_upgradeable_mask" />
		</FrameLayout>
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="30dip"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:paddingTop="5dip"
	        android:paddingLeft="6dip" >
			<com.nd.hilauncherdev.framework.view.AlwaysMarqueeTextView 
				android:id="@+id/name" 
				 android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:ellipsize="end"
		         android:marqueeRepeatLimit="marquee_forever"
		         android:singleLine="true"
		         android:textColor="@color/theme_shop_v6_list_item_title"
		         android:textSize="@dimen/theme_shop_v6_recomment_text_size" 
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>