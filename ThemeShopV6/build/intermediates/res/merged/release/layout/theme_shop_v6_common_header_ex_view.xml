<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/v7_common_header_height"
    android:background="@drawable/v7_common_header_bg"
    >
    <ImageView 
        android:id="@+id/back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:layout_marginLeft="@dimen/v7_gap1_15dp"
         android:src="@drawable/theme_shop_v6_common_menu_selector"
         />
    
    <TextView
         android:id="@+id/title"
         android:layout_toRightOf="@+id/back"
         android:layout_toLeftOf="@+id/menu"
         style="@style/v7_common_header_title"
         />
    
    <ImageView 
        android:id="@+id/menu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="15dp"
         android:src="@drawable/theme_shop_v6_common_menu_selector"
         android:visibility="invisible"
         />

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/header_menu_btn_txt_selector"
        android:gravity="center"
        android:visibility="visible"
        android:background="@drawable/header_menu_dropdownbox_selector"
        />
    
</RelativeLayout>