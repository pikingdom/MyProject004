<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/common_blue_vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/common_blue_vertical_line" />
        <TextView
            android:id="@+id/theme_campaign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/common_blue_vertical_line"
            android:text="@string/pseronal_assist_v6_launcher_everyday_task"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="@string/pseronal_assist_v6_launcher_theme_design_competition_more"
            android:textColor="#ff00BCD5"
            android:visibility="gone"
            android:textSize="15sp" />
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/theme_campaign_banner"
	        android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/bg_card"
            android:text="@string/pseronal_assist_v6_launcher_theme_everyday_task_content"
            android:textColor="#ff00BCD5"
            android:gravity="center"
            android:textSize="18sp"/>
	    <TextView
	        android:id="@+id/theme_campaign_hint"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#AA000000"
			android:text="@string/theme_campaign_hint"
			android:textColor="@android:color/white"
			android:gravity="center"
			android:textSize="15sp"
			android:visibility="gone" />
    </FrameLayout>
    <TextView
        android:id="@+id/theme_campaign_desc"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/pseronal_assist_v6_launcher_theme_everyday_task_tips"
        android:textColor="#ff999999"
        android:textSize="11sp" />
</LinearLayout>