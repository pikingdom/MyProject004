<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        
        <LinearLayout 
            android:id="@+id/personal_center_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout 
                android:id="@+id/personal_information_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:paddingRight="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:paddingTop="@dimen/theme_shop_v6_personal_center_common_item_padding_vertical"
                android:paddingBottom="@dimen/theme_shop_v6_personal_center_common_item_padding_vertical"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">
                <ImageView 
                    android:id="@+id/personal_icon"
                    android:layout_width="48dip"
		            android:layout_height="48dip"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"
		            android:src="@drawable/launcher_menu_presonal_user_icon" />
                <LinearLayout 
                    android:layout_width="match_parent"
            	    android:layout_height="wrap_content"
            	    android:layout_alignParentRight="true"
            	    android:layout_toRightOf="@+id/personal_icon"
            	    android:layout_marginTop="15dp"
            	    android:layout_marginRight="30dp"
            	    android:orientation="vertical">
                    <TextView 
	            	    android:id="@+id/personal_name"
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_marginLeft="5dp"
	            	    android:layout_marginRight="5dp"
	            	    android:paddingRight="20dp"
	            	    android:singleLine="true"
	            	    android:ellipsize="end"
	            	    android:textColor="@color/theme_shop_personal_title_color"
	            	    android:text="name"
	            	    android:textSize="18sp"/>
	            	<com.nd.hilauncherdev.menu.personal.memberintegral.IntegralBar
	                    android:id="@+id/personal_center_setting_upgrade_progress" 
				        style="?android:attr/progressBarStyleHorizontal"
				        android:layout_width="fill_parent"
				        android:layout_height="@dimen/integral_bar_height"
				        android:focusable="false"
				        android:progress="0"
				        android:max="100"
				        android:progressDrawable="@drawable/personal_center_setting_upgrade_progress_horizontal"
				        android:thumb="@android:color/transparent" />
                </LinearLayout>
                <ImageView 
                   	android:layout_width="wrap_content"
	            	android:layout_height="match_parent"
	            	android:src="@drawable/searchbox_btn_detail"
	            	android:layout_marginRight="5dp"
	            	android:layout_alignParentRight="true"
	            	android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:gravity="center_vertical"
            	android:background="@color/white">
                <Button 
                    android:id="@+id/personal_center_setting_upgrade_btn" 
                    android:layout_width="match_parent"
  		 			android:layout_height="wrap_content"
  		 			android:layout_marginTop="10dp"
  		 			android:layout_marginLeft="10dp"
  		 			android:layout_marginRight="10dp"
  		 			android:layout_alignParentRight="true"
  		 			android:layout_centerVertical="true"
                    android:background="@drawable/common_btn_blue"
                    android:text="@string/personal_center_setting_upgrade"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/personal_center_setting_upgrade_layout" 
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:visibility="gone">
                <TextView
                    android:id="@+id/personal_center_setting_upgrade_txt"
		            android:layout_width="wrap_content"
		   		 	android:layout_height="match_parent"
		   		 	android:gravity="center"
		   		 	android:layout_centerVertical="true"
		            android:text="@string/personal_center_setting_upgrade_tips2"
		            android:singleLine="true"
		            android:ellipsize="end"
		            android:textSize="13sp"
		            android:textColor="#ffde596a"
		            android:layout_alignParentLeft="true"/>
                 <ImageView 
                    android:id="@+id/personal_center_setting_upgrade_img"
                    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:layout_centerVertical="true"
		            android:layout_alignParentRight="true"
		            android:background="@drawable/personal_center_setting_associator_help"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:paddingRight="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@android:color/white">
            	<com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
            	    android:id="@+id/personal_recharge"
            	    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
            	    ></com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/myphone_common_split"
                    />
                <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
            	    android:id="@+id/personal_recharge_record"
            	    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
            	    ></com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/myphone_common_split"
                    />
                
                <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
            	    android:id="@+id/personal_purchase_record"
            	    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
            	    ></com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/myphone_common_split"
                    />
                
                <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
            	    android:id="@+id/personal_maozhua_coupon"
            	    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
            	    ></com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
                
            </LinearLayout>
            
            <com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem
            	    android:id="@+id/personal_security"
            	    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:paddingLeft="@dimen/theme_shop_v6_personal_center_common_padding_h"
                	android:paddingRight="@dimen/theme_shop_v6_personal_center_common_padding_h"
                	android:background="@android:color/white"
            	    ></com.nd.hilauncherdev.menu.personal.widget.PersonalCenterSettingsItem>
            
            <LinearLayout 
                android:id="@+id/personal_exist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:paddingRight="@dimen/theme_shop_v6_personal_center_common_padding_h"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/common_btn_red_selector">
            	<TextView 
            	    android:id="@+id/personal_security_title"
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_marginLeft="5dp"
            	    android:layout_marginRight="5dp"
            	    android:gravity="center"
            	    android:singleLine="true"
            	    android:ellipsize="end"
            	    android:textColor="@android:color/white"
            	    android:textSize="@dimen/theme_shop_v6_personal_center_text_size"
            	    android:text="@string/personal_center_exist"/>
            </LinearLayout>
            
            
        </LinearLayout>
        
    </ScrollView>
    

</LinearLayout>
