<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/create_themeseries_success" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="自动换主题已生成"
        android:textColor="@color/common_little_text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/btnApply"
            android:layout_width="150dp"
            android:layout_height="37dip"
            android:background="@drawable/common_btn_blue_selector"
            android:text="@string/common_button_apply"
            android:textColor="@color/white"
            android:textSize="14sp" />
        
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="150dp"
            android:layout_height="37dip"
            android:layout_marginLeft="15dp"
            android:background="@drawable/common_btn_blue_selector"
            android:text="@string/common_button_complate"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>