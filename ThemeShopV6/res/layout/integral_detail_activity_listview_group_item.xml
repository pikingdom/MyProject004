<?xml version="1.0" encoding="utf-8"?>
<!-- 积分详情列表元素 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#ffffffff">

        <!-- 积分信息 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/integral_detail_activity_listview_group_item_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="8月"
                android:textColor="#ff181818"
                android:textSize="16sp" />
        </LinearLayout>
        <!--开关按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/integral_detail_activity_listview_group_item_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="+10"
                android:textColor="#fffeb52b"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/integral_detail_activity_listview_group_item_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:src="@drawable/integral_detail_activity_listview_group_item_open"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffeeeeee"/>
</LinearLayout>