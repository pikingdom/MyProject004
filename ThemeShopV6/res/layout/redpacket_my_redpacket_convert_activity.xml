<?xml version="1.0" encoding="utf-8"?>
<!-- 兑换红包页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/myphone_bg_color">
    <com.nd.hilauncherdev.shop.shop3.customview.ThemeHeaderView
        android:id="@+id/mHeadView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical">
	    <EditText
	        android:id="@+id/redpacket_my_redpacket_convert_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/navigation_search_edittext_bg"
            android:hint="@string/redpacket_my_redpacket_convert_edittext_tips"
            android:inputType="text"
            android:textColor="#ff545454"
            android:textColorHint="#ffc6c6c6"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"
            android:textSize="18sp" />
	    <TextView 
	        android:id="@+id/redpacket_my_redpacket_convert_btn"
	        android:layout_width="match_parent"
            android:layout_height="37dip"
	        android:background="@drawable/common_btn_blue_selector"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:textSize="14sp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:text="@string/redpacket_my_redpacket_convert_btn_tips"/>
	</LinearLayout>
</LinearLayout>