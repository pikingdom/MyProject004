<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_enter_diy_theme"
        style="android:buttonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:background="@drawable/btn_footview_selector"
        android:gravity="center"
        android:text="@string/theme_shop_enter_diy_theme"
        android:textColor="#00bcd5"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_enter_create_series"
        style="android:buttonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:background="@drawable/btn_footview_selector"
        android:gravity="center"
        android:text="@string/custom_theme_series"
        android:textColor="#00bcd5"
        android:textSize="14sp" />

</LinearLayout>