<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/theme_v6_main_bg"
>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView
                android:dividerHeight="10dip"
                android:divider="@drawable/transparent_background"
                android:fadingEdge="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@drawable/transparent_background"
                android:id="@+id/listView"/>
        <!-- Loading模块 -->
        <com.nd.hilauncherdev.shop.widget.LoadingStateView
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/myphone_bg_color">
        </com.nd.hilauncherdev.shop.widget.LoadingStateView>
    </RelativeLayout>

</LinearLayout>

