<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
              android:orientation="vertical" android:layout_width="fill_parent"    
              android:layout_height="fill_parent" android:gravity="center_vertical"
              android:layout_gravity="center_vertical" 
              android:background="@color/notification_background_color">
	<LinearLayout
              android:orientation="horizontal"    
              android:layout_width="fill_parent"    
              android:layout_height="wrap_content"    
              >     
    	<ImageView android:id="@+id/widget_image"    
               android:layout_width="wrap_content"    
               android:layout_height="wrap_content"   
               android:layout_marginLeft="5.0dip" 
               />
        <TextView android:id="@+id/widget_name" 
     			android:layout_width="wrap_content"    
                android:layout_height="wrap_content" 
                android:textSize="15sp"
                android:textColor="@color/notification_text_color"
                android:layout_marginLeft="5.0dip" />
    </LinearLayout>
    <LinearLayout
              android:orientation="horizontal"    
              android:layout_width="fill_parent"    
              android:layout_height="wrap_content"    
              >
         <TextView android:id="@+id/percent" 
     			android:layout_width="wrap_content"    
                android:layout_height="wrap_content" 
                android:textColor="@color/notification_text_color"
                android:textSize="15sp"
                android:layout_marginLeft="5.0dip" />
         <ProgressBar android:id="@+id/progress"
         		android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginLeft="5.0dip"
                android:layout_marginBottom="3dip"
                android:paddingRight="25.0dip" />
     </LinearLayout>        
</LinearLayout>
