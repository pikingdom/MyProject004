<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wait_layout2_ex"
    android:layout_width="fill_parent"
    android:layout_height="42dip"
    android:layout_gravity="center_horizontal"
    android:background="#F7F7F7"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/wait_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/theme_shop_v6_loading_bj_bottom"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/theme_shop_v6_loading_bottom_ani"
            android:indeterminateOnly="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:text="@string/txt_loading"
            android:textColor="#414141" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wait_network_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取数据失败，请点击刷新"
            android:textColor="#414141" />
    </LinearLayout>

</FrameLayout>