<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/navigation_search_group_bg_selector"
    android:clickable="true"
    android:id="@+id/orderlayout">
	<ImageView 
	    android:id="@+id/themeIcon"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:src="@drawable/theme_shop_v6_theme_order_list_pay_theme"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_alignParentLeft="true"
	    />
    <RelativeLayout
        android:id="@+id/leftTheme"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/themeIcon"
        android:layout_marginRight="80dp">
		
        <TextView
            android:id="@+id/themeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:textColor="@color/black"
            android:textSize="16sp" 
            android:text="themetitle"/>

        <TextView
            android:id="@+id/themeDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/themeTitle"
            android:layout_below="@+id/themeTitle"
            android:text="themeDateTime"
            android:textColor="#7a7a7a"
            android:textSize="13sp" />
    </RelativeLayout>
	<TextView 
	     android:id="@+id/themePrice"
	     android:layout_alignParentRight="true"
         android:layout_width="70dp"
         android:layout_marginRight="10dp"
         android:layout_height="wrap_content"
         android:text="themePrice"
         android:layout_centerVertical="true"
         android:textColor="#7a7a7a"
         android:textSize="13sp" />
</RelativeLayout>