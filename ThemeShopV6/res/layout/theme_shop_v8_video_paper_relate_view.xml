<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/v7_gap1_15dp"
    android:layout_marginTop="@dimen/v8_gap3_5dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
        android:layout_marginRight="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/img_bg_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nd.hilauncherdev.shop.widget.RoundCornerImageView
                android:id="@+id/img_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_shop_v6_recomment_new_img_height"
                android:scaleType="fitXY"
                android:src="@drawable/theme_shop_v6_theme_no_find_small" />
        </FrameLayout>
        <TextView
            android:id="@+id/video_item_title_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v8_gap3_5dp"
            android:layout_marginTop="@dimen/v7_gap3_8dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/theme_default_name"
            android:textColor="@color/theme_shop_v6_list_item_title"
            android:textSize="@dimen/theme_shop_v6_list_item_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
        android:layout_marginRight="@dimen/theme_shop_v6_recomment_taghot_img_margin_4"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/img_bg_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nd.hilauncherdev.shop.widget.RoundCornerImageView
                android:id="@+id/img_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_shop_v6_recomment_new_img_height"
                android:scaleType="fitXY"
                android:src="@drawable/theme_shop_v6_theme_no_find_small" />
        </FrameLayout>

        <TextView
            android:id="@+id/video_item_title_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/v7_gap3_8dp"
            android:layout_marginTop="@dimen/v7_gap3_8dp"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/theme_shop_v6_list_item_title"
            android:textSize="@dimen/theme_shop_v6_list_item_title" />
    </LinearLayout>

</LinearLayout>
