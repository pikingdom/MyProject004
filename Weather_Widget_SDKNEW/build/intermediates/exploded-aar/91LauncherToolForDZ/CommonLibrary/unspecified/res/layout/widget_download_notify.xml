<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dip"
	android:background="@color/notification_background_color">
	<ImageView android:id="@+id/widget_notify_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:scaleType="fitCenter" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingLeft="5dip" android:gravity="center_vertical">

		<TextView android:id="@+id/widget_notify_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="15sp" android:textColor="@color/notification_text_color" />

		<TextView android:id="@+id/widget_notify_content"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="12sp" android:textColor="@color/notification_text_color" />

	</LinearLayout>
</LinearLayout>
