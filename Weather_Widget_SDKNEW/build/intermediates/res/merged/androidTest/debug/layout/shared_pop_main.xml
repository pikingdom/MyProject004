<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="290dip"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7" >

        <Button
            android:id="@+id/shared_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/common_btn_cancel_selector"
            android:text="@string/common_button_cancel"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/shared_lightbar_layout"
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:layout_above="@+id/shared_cancel" >

            <com.nd.hilauncherdev.framework.view.commonsliding.CommonLightbar
                android:id="@+id/shared_lightbar"
                android:layout_width="match_parent"
                android:layout_height="8dip"
                android:gravity="center_horizontal" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/shared_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shared_lightbar_layout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:paddingTop="20dip" />
    </RelativeLayout>
