<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/presonal_compaign_mainview_header"
        android:layout_width="match_parent"
        android:layout_height="115dip" >

        <com.nd.weather.widget.UI.banner.CompaignSlidingView
            android:id="@+id/presonal_compaign_mainview_header_slidingview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.nd.hilauncherdev.framework.view.commonsliding.CommonLightbar
            android:id="@+id/lightbar"
            android:layout_width="wrap_content"
            android:layout_height="15dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/launcher_menu_presonal_compaign_rightbar_bg"
            android:gravity="center_vertical" />
    </RelativeLayout>

</LinearLayout>