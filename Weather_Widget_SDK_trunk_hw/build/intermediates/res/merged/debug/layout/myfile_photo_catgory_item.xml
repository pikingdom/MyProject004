<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:gravity="center_horizontal" 
	android:orientation="vertical"
	android:paddingTop="@dimen/myfile_top_view_margin">
	
	<RelativeLayout 
		android:layout_width="@dimen/myfile_photo_category_width"
		android:layout_height="@dimen/myfile_photo_category_height" >
		
		<ImageView android:id="@+id/myfile_photo_category_image"
		    android:layout_width="@dimen/myfile_photo_width"
			android:layout_height="@dimen/myfile_photo_height"
			android:scaleType="fitXY" 
			android:layout_gravity="center"
			android:background="@drawable/myfile_photo_category_bg" 
			android:src="@drawable/wallpaper_loading"/>
		
		<ImageView android:id="@+id/myfile_check_icon"
			android:layout_width="16dip" 
			android:layout_height="16dip"
			android:layout_marginBottom="10dip" 
			android:layout_marginRight="10dip"
			android:background="@drawable/common_checkbox_uncheck"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true" 
			android:visibility="gone" />
	</RelativeLayout>

	<TextView android:id="@+id/myfile_photo_category_text"
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:gravity="center" 
		android:singleLine="true"
		android:textSize="@dimen/myphone_item_text_size"
		android:textColor="@color/myphone_common_text_color"
		android:ellipsize="middle"/>
</LinearLayout>
