<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="40dip">

	<TextView android:id="@+id/list_item_text"
		android:layout_width="wrap_content" android:layout_height="35dip"
		android:layout_marginLeft="15dip" android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" android:gravity="center_vertical"
		android:textSize="20sp" android:textColor="@color/listItemColor" />
	<TextView android:id="@+id/list_item_note_text"
		android:layout_width="wrap_content" android:layout_height="35dip"
		android:layout_marginLeft="4dip" android:layout_toRightOf="@id/list_item_text"
		android:layout_marginTop="4dip" android:gravity="center_vertical"
		android:textSize="16sp" android:textColor="@color/gray"
		android:visibility="gone" />

	<TextView android:id="@+id/list_item_near_text"
		android:layout_width="wrap_content" android:layout_height="35dip"
		android:layout_marginRight="10dp" android:layout_alignParentRight="true"
		android:layout_centerVertical="true" android:gravity="center_vertical"
		android:textColor="#ff7094BA" android:visibility="gone" />

</RelativeLayout>
