<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TitleStyle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textAppearance">@style/TitleText</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance.DialogWindowTitle">

        <!-- 设置Dialog标题栏文字颜色。 -->
        <item name="android:textColor">#000</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_win_in_up</item>
        <item name="android:windowExitAnimation">@anim/pop_win_out_down</item>
    </style>

    <style name="TopMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_win_top_in</item>
        <item name="android:windowExitAnimation">@anim/pop_win_top_out</item>
    </style>

    <!-- 阴影风格 -->
    <style name="shadow_black">
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="shadow_gray">
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="weather_exponent_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ccffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- 多天天气字体风格 -->
    <style name="more_weather_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#83565d68</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
    </style>

    <!-- 设置_项风格 -->
    <!-- 设置_子项 -->
    <style name="setting_item_sub_ll">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">2dip</item>
    </style>

    <style name="setting_item_multiple_ll">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/weather_shape_list_bk</item>
    </style>

    <style name="setting_item_single_ll" parent="setting_item_multiple_ll">
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 设置_子项分割符 -->
    <style name="setting_item_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#c3dcf2</item>
    </style>

    <style name="setting_item_open_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:src">@drawable/open_1</item>
    </style>

    <!-- 设置_子项标题 -->
    <style name="setting_item_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 设置_标题 -->
    <style name="setting_item_title_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#454545</item>
    </style>

    <!-- 设置_状态 -->
    <style name="setting_item_state_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginTop">-1dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00bcd5</item>
    </style>

    <style name="setting_catalog_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">-2dip</item>
        <item name="android:textColor">#767676</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 标题栏分割线  LinearLayout -->
    <style name="titleDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/line_for_mask_topbar</item>
    </style>

    <!-- <style name="title_shadow_style"> -->
    <!-- <item name="android:shadowColor">#ee000000</item> -->
    <!-- <item name="android:shadowDx">1.2</item> -->
    <!-- <item name="android:shadowDy">1.2</item> -->
    <!-- <item name="android:shadowRadius">1.2</item> -->
    <!-- </style> -->

    <style name="titleText_w">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tool_text_w</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/toolsize</item>
    </style>

    <style name="yujichong_txt_style_new">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#83565d68</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:textSize">@dimen/yujichongsize</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="yujichong_txt_style">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#83565d68</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
    </style>

    <!-- 普通按钮 -->
    <style name="titleButton">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">29dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/weather_btn_stand_selector</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dateButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/weather_btn_blue_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 天气首页，查看更多 -->
    <style name="moreButton">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 派生按钮 -->
    <style name="backButton" parent="titleButton">
        <item name="android:layout_marginLeft">6.3dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/weather_btn_back_selector</item>
        <item name="android:text">@string/back</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="rightButton" parent="titleButton">
        <item name="android:layout_marginRight">6.3dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="weather_change_view_type">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/weather_change_view_type_selector</item>
        <item name="android:layout_width">45dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="day_weather_image_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">5dp</item>:
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="day_weather_info_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/tempsize</item>
        <item name="android:textSize">@dimen/tempsize</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- 左上角日期 -->
    <style name="weather_date_topleft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:shadowColor">#69565d68</item>
    </style>

    <style name="city_topcenter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:shadowColor">#69565d68</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- <style name="day_week_style"> -->
    <!-- <item name="android:layout_width">fill_parent</item> -->
    <!-- <item name="android:layout_height">fill_parent</item> -->
    <!-- <item name="android:layout_weight">1</item> -->
    <!-- <item name="android:gravity">center</item> -->
    <!-- <item name="android:textColor">@color/weather_info_old</item> -->
    <!-- <item name="android:textSize">13sp</item> -->
    <!-- </style> -->

    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- 城市分类头 -->
    <style name="city_radio_group_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/weather_city_indct_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableBottom">@drawable/weather_indicator_bottom</item>
    </style>

    <style name="weather_temp_txt_style">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#59565d68</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.8</item>
    </style>
    
    <style name="weather_temp_cicle_style">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#59565d68</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.8</item>
    </style>
    
    <style name="PopupWarningAni" parent="android:Animation"
		mce_bogus="1">
		<item name="android:windowEnterAnimation">@anim/popup_warning_enter</item>
		<item name="android:windowExitAnimation">@anim/popup_warning_exit</item>
	</style>

</resources>